<% form_tag buscar_obraspublicas_path, :method => 'get' do %>
<div align="center">
<table width="70%" border="0" cellspacing="2" cellpadding="0">
    <tr>
      <td width="33%" height="20" class="campos" align="left">Identificacion</td>
      <td class="camposDesc" align="left"><%= text_field_tag :identificacion, params[:identificacion],{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Proyecto</td>
      <td class="camposDesc" align="left">
        <%=select("ubicacion", "obrasproyecto_id", Obrasproyecto.find(:all, :order=>"descripcion").collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:480px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Estado General</td>
      <td class="camposDesc" align="left">
        <%= select("ubicacion",
                :estado, { "ISVIMED JURIDICA" => "ISVIMED JURIDICA",
                           "PAGO EN TRAMITE" => "PAGO EN TRAMITE",
                           "PAGADO" => "PAGADO",
                           "ISVIMED FINANCIERA" => "ISVIMED FINANCIERA",
                           "INCOMPLETO PARA RESOLUCION" => "INCOMPLETO PARA RESOLUCION",
                           "INCOMPLETO PARA PAGO" => "INCOMPLETO PARA PAGO",
                           "DEVUELTO A LA EDU" => "DEVUELTO A LA EDU",
                           "DEVUELTO AL MUNICIPIO" => "DEVUELTO AL MUNICIPIO",
                           "CON RESOLUCION" => "CON RESOLUCION"                         },
                        { :include_blank => true },
                      { :style=>"width:250px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">PUI Comuna XIII</td>
      <td class="camposDesc" align="left">
        <%= select("ubicacion",
                :pui_comuna, { "SI" => "SI",
                           "NO" => "NO"},
                        { :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">PUI Centro Oriental</td>
      <td class="camposDesc" align="left">
        <%= select("ubicacion",
                :pui_oriental, { "SI" => "SI",
                           "NO" => "NO"},
                        { :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Opcion de Vivienda</td>
      <td class="camposDesc" align="left">
        <%= select("ubicacion",
                :opcion_vivienda, { "NUEVA" => "NUEVA",
                           "USADA" => "USADA"},
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Caso Especial</td>
      <td class="camposDesc" align="left">
        <%= select("ubicacion",
                :caso_especial, { "SI" => "SI",
                           "NO" => "NO"},
                        { :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
      </td>
    </tr>
</table>
<table width="80%" height="0" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
<table width="80%" border="0" cellpadding="2" align="center" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
    <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %>
          </span></div>
        <% if permiso("obraspublica","C").to_s == "S" %>
       <div class="uiButton"><img class="img" src="/images/excel.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'format', :value => 'xls' %>
          </span></div>
        <% end %>
</div></td>
  </tr>
</table>
</div>
<% end %>
