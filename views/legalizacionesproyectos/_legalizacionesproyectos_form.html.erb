<div align="center">
<table width="80%" border="0" cellspacing="0" cellpadding="0">
  <tr class="odd1">
    <td width="50%" class="campos">Proyecto *</td>
    <td width="20%" class="campos">Bloque *</td>
    <td width="15%" class="campos">Piso *</td>
    <td width="15%" class="campos">Apto *</td>
  </tr>
  <tr>
     <td><%= chain_select_stand_alone(:proyecto, :prefix => 'legalizacionesproyecto',:value=>@legalizacionesproyecto.proyecto) %>
         <strong><%= error_message_on :legalizacionesproyecto, :proyecto, :css_class =>"cerror"%></strong></td>
     <td><%= chain_select_stand_alone(:bloque, :prefix => 'legalizacionesproyecto', :parent =>@legalizacionesproyecto.proyecto, :value=>@legalizacionesproyecto.bloque) %>
         <strong><%= error_message_on :legalizacionesproyecto, :bloque, :css_class=>"cerror"%></strong></td>
     <td><%= chain_select_stand_alone(:piso, :prefix => 'legalizacionesproyecto', :parent =>@legalizacionesproyecto.bloque, :value=>@legalizacionesproyecto.piso) %>
         <strong><%= error_message_on :legalizacionesproyecto, :piso, :css_class=>"cerror"%></strong></td>
     <td><%= chain_select_stand_alone(:apto, :prefix => 'legalizacionesproyecto', :parent =>@legalizacionesproyecto.piso, :value=>@legalizacionesproyecto.apto) %>
         <strong><%= error_message_on :legalizacionesproyecto, :apto, :css_class=>"cerror"%></strong></td>
  </tr>
</table>
<table width="80%" height="0" border="0" cellpadding="0" cellspacing="0">
  <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
</table>
<table width="80%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td height="30"><div align="right"><%= chain_select_indicator_stand_alone('legalizacionesproyecto')%>
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>
          <span class="uiButtonText"><%= hidden_field :legalizacionesproyecto, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div>
    </td>
  </tr>
</table>
</div>