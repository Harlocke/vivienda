<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/productosmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">INFORMACION PRODUCTOS</div></td>
              <td width="3%"><div align="right">
                     <%= link_to image_tag('nuevo.png',
	                            { :border=>0, :title => "Nuevo"}),new_producto_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<div align="center">
<% form_tag request.path, :method => 'get' do %>
    <% content_tag :label do %>
<table width="70%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="30%">Digite el dato a buscar :</td>
     <td width="70%"><%= text_field_tag :search, params[:search],{ :class => "campo",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'", :size =>"50" } %>
      <%= image_submit_tag '/images/find.png', :width => '18', :name => nil %></td>
   </tr>
</table>
    <% end %>
  <% end %>
</div>
<br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="15%" height="30" class="oce-first">Codigo</td>
    <td width="55%" height="30" class="oce-first">Descripcion</td>
    <td width="20%" height="30" class="oce-first">Tipo</td>
    <td width="10%" class="oce-first">&nbsp;</td>
  </tr>
<% @productos.each do |producto| %>
  <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
    <td height="20" class="camposDesc"><%=h producto.codigo %></td>
    <td class="camposDesc"><%=h producto.descripcion %></td>
    <td class="camposDesc"><%=h producto.dtipo %></td>
    <td class="camposDesc"><div align="center"><%= link_to 'Editar',edit_producto_path(producto), :class=>"editarlink"%></div></td>
  </tr>
<% end %>
</table>
<br/>
<table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="100%" class="acci_titcontenido2"><div align="center"><%= will_paginate @productos, :previous_label => 'Anterior', :next_label => 'Siguiente' %></div></td>
   </tr>
   <tr>
     <td width="100%" class="acci_titcontenido2"><div align="center">Total Registros: <%= @productos.total_entries %></div></td>
   </tr>

</table>
<br/>
