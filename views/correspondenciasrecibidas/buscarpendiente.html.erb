<%= stylesheet_link_tag 'scaffold'%>
<%=  javascript_include_tag :defaults %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/correspondenciarecibidamin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">CORRESPONDENCIA RECIBIDA PENDIENTE</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	            { :border=>0, :title => "Buscar"}),correspondenciasrecibidas_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td width="7%" class="oce-first">Nro Radicado</td>
    <td width="10%" class="oce-first">Fecha Elaboraci√≥n</td>
    <td width="10%" class="oce-first">Nro Externo</td>
    <td width="30%" class="oce-first">Remitente</td>
    <td width="35%" class="oce-first">Asunto</td>
    <td width="8%" class="oce-first">&nbsp;</td>
  </tr>
<% @correspondenciasrecibidas.each do |correspondenciasrecibida| %>
<tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
    <td class="camposDesc"><%=h correspondenciasrecibida.nro_radicado rescue nil%></td>
    <td class="camposDesc"><%=h correspondenciasrecibida.fecha_elaboracion rescue nil%></td>
    <td class="camposDesc"><%=h correspondenciasrecibida.numero_externo rescue nil%></td>
    <td class="camposDesc">
              <% if Correspondenciasrecibida.exists?("#{correspondenciasrecibida.persona_id}") == true %>
                <strong>Identificacion:</strong> <%=h correspondenciasrecibida.persona.autobuscar rescue nil%><br/><% end -%>
                <strong>Empresa: <%=correspondenciasrecibida.correspondenciasremitente.identificacion rescue nil%> - <%=correspondenciasrecibida.correspondenciasremitente.nombre rescue nil%></strong> </td>
    <td class="camposDesc"><%=h correspondenciasrecibida.asunto rescue nil%></td>
    <td class="camposDesc"><div align="center">
    <%= link_to 'Editar', edit_correspondenciasrecibida_path(correspondenciasrecibida, :etapa => '1'),:class=>"editarlink"%>
    </div></td>
  </tr>
<% end %>
</table>
<br/>
<table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="100%" height="20" class="camposDescN"><div align="center"><%= will_paginate @correspondenciasrecibidas, :previous_label => 'Anterior', :next_label => 'Siguiente' %></div></td>
   </tr>
  <tr valign="middle">
    <td width="100%" height="20" class="camposDescN"><div align="center">Total Registros consulta: <%= @correspondenciasrecibidas.total_entries %> - Nro Total de Registro : <%=@correspondenciasrecibidas.count%></div></td>
  </tr>
</table>
<br/>




