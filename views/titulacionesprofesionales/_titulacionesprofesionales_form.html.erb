<table width="90%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td align="left" class="campos">Cargo</td>
    <td align="left" class="campos">Responsable</td>
    <td align="left" class="campos">Maticula Prof.</td>
    <td align="left" class="campos"></td>
  </tr>
  <tr valign="top">
    <td class="camposDesc">
          <%= select(:titulacionesprofesional, :cargo, [["ARQUITECTO","ARQUITECTO"],
                  ["INGENIERO CIVIL","INGENIERO CIVIL"]],
                      { :include_blank => true },
                    { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :titulacionesprofesional, :cargo, :css_class =>"cerror"%></td>
    <td><%=select("titulacionesprofesional", "user_id", User.find(:all, :order => 'nombre').collect {|p| [ p.nombre, p.id ] }, { :include_blank => true },
      { :style=>"width:450px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
    <%= error_message_on :titulacionesprofesional, :user_id, :css_class =>"cerror"%></td>
    <td class="camposDesc"><%= text_field :titulacionesprofesional, :matricula_prof,{ :class => "campo", :size => "15",
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
              <%= error_message_on :titulacionesprofesional, :matricula_prof, :css_class =>"cerror"%></td>
</tr>
</table>
