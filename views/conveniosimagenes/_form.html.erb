<div align="center">
  <table width="70%" border="0" align="center" cellspacing="0" cellpadding="0">
    <tr>
      <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
        <tr>
          <td width="30%" class="campos" align="left">Tipo de Documento</td>
          <td width="70%" class="campos" align="left">
              <%= f.text_field :descripcion,{ :class => "campo", :size => 50,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                  :onFocus => "this.style.border='1px solid #f00'",
                  :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= f.error_message_on :descripcion, :css_class =>"cerror"%></td>
        </tr>
        <tr>
          <td class="campos" align="left">convenio a Cargar</td>
          <td class="camposDesc" align="left">
              <%= f.file_field :convenio,
              { :class => "campo",
                :size => 46,
                :maxlength => 1000,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
              <%= f.error_message_on :convenio, :css_class =>"cerror"%></td>
        </tr>
      </table>
      </td>
    </tr>
  </table>
</div>