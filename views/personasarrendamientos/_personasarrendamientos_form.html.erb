<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td>
     <table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="35%" align="left" class="campos">Inicia proceso de arrendamiento temporal *</td>
        <td width="35%" align="left" class="campos">Se ofrece vivienda del banco inmobiliario *</td>
        <td width="20%" align="left" class="campos">Fecha *</td>
      </tr>
      <tr valign="top">
        <td><%= select(:personasarrendamiento, :iniciaproceso, [["SI","SI"],["NO","NO"]],
                 { :include_blank => true }, { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
            <%= error_message_on :personasarrendamiento, :iniciaproceso, :css_class =>"cerror"%></td>
        <td><%= select(:personasarrendamiento, :ofrecebanco, [["SI","SI"],["NO","NO"]],
                 { :include_blank => true }, { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
            <%= error_message_on :personasarrendamiento, :ofrecebanco, :css_class =>"cerror"%></td>
        <td><%= calendar_date_select "personasarrendamiento", "fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
            <%= error_message_on :personasarrendamiento, :fecha, :css_class =>"cerror"%></td>
      </tr>
    </table>
    <table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="70%" align="left" class="campos">Observaci&oacute;n *</td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left" >
          <%=text_area(:personasarrendamiento, :observaciones, :cols => 110, :rows => 3, :class => 'campo', :maxlength => 3900,
           :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
          <%= error_message_on :personasarrendamiento, :observaciones, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
    </table>
</td>
  </tr>
</table>
<table width="100%"  align="center" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td height="30"><div align="right">
      <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :personasarrendamiento, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td>
  </tr>
</table>