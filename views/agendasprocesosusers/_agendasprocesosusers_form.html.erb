<table width="50%" border="0" cellspacing="2" align="center" cellpadding="0">
  <tr class="odd1">
    <td colspan="2" class="campos">Usuario asignado</td>
  </tr>
  <tr valign="top">
    <td><%= text_field_with_auto_complete :agendasprocesosuser, :user_nombre, { :class => "campo",:size => 70,:maxlength => 150,:placeholder=>"Lista desplegable - Digite el dato",:onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" },{ :url => listar_users_path(:js), :method => :get, :with => "'search=' + element.value" } %>
       <%= error_message_on :agendasprocesosuser, :user_nombre, :css_class =>"cerror"%></td>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :agendasprocesosuser, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td>       
  </tr>
</table>
