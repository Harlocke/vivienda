<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="90%" class="campos" align="left">Item *</td>
        <td width="10%" class="campos" align="left">Valor *</td>
        </tr>
      <tr valign="top">
        <td class="camposDesc" align="left">
          <% if @conveniosmejoramiento.id %>
        <%=select("conveniosmejoramiento", "mejoramientositem_id", Mejoramientositem.find(:all, :conditions=>["estado = 'ACTIVO'"]).collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:700px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
        <% else %>
        <%=select("conveniosmejoramiento", "mejoramientositem_id", Mejoramientositem.find(:all, :conditions=>["estado = 'ACTIVO' and id not in (select mejoramientositem_id from conveniosmejoramientos where convenio_id = #{@convenio.id})"], :order=>'descripcion').collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:700px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
        <% end %>
        <%= error_message_on :conveniosmejoramiento, :mejoramientositem_id, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :conveniosmejoramiento, :valor_unitario,{ :class => "campo", :size => 15,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :conveniosmejoramiento, :valor_unitario, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr><td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :conveniosmejoramiento, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td></tr>
    </table>
    </td>
  </tr>
</table>
