<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="20%" class="campos" align="left">Tipo *</td>
        <td width="15%" class="campos" align="left">Fecha Solicitud *</td>
        <td width="20%" class="campos" align="left">Valor *</td>
        <td width="45%" class="campos" align="left">Observacion</td>
        </tr>
      <tr valign="top">
        <td class="camposDesc" align="left"><%= select(:conveniospago,
                :tipopago,[ ["ANTICIPO" , "ANTICIPO"],["PAGO 1", "PAGO 1"], ["PAGO 2", "PAGO 2"], ["PAGO 3" , "PAGO 3"]],
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo"})%>
        <%= error_message_on :conveniospago, :tipopago, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= calendar_date_select "conveniospago", "fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
        <%= error_message_on :conveniospago, :fecha, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :conveniospago, :valor,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :conveniospago, :valor, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left">
          <%= text_area(:conveniospago, :observacion, :cols => 70, :rows => 4, :class => 'campo', :maxlength => 4000,
:onChange=> "javascript:this.value=this.value.toUpperCase();") %>
        <%= error_message_on :conveniospago, :observacion, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr><td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :conveniospago, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td></tr>
    </table>
    </td>
  </tr>
</table>
