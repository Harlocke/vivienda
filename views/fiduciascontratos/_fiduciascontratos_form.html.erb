<table width="100%" border="0" cellspacing="2" align="center" cellpadding="0">
  <tr class="odd1">
    <td width="15%"><span class="campos">Nro Fondo</span></td>
    <td width="70%"><span class="campos">Nombre del Fondo</span></td>
    <td width="15%"><span class="campos">Fecha Inicio *</span></td>
  </tr>
  <tr>
    <td><%= text_field :fiduciascontrato, :nro_fondo,{ :class => "campo", :size => 15,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciascontrato, :nro_fondo, :css_class =>"cerror"%></td>
    <td><%= text_field :fiduciascontrato, :fondo,{ :class => "campo", :size => 100,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciascontrato, :fondo, :css_class =>"cerror"%></td>
    <td><%= calendar_date_select "fiduciascontrato", "fecha_inicio", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :fiduciascontrato, :fecha_inicio, :css_class =>"cerror"%></td>
  </tr>
</table>
<table width="100%" border="0" cellspacing="2" align="center" cellpadding="0">
  <tr class="odd1">
    <td width="15%"><span class="campos">Fecha Fin *</span></td>
    <td width="20%"><span class="campos">NrÂ° de contrato *</span></td>
    <td width="50%"><span class="campos">Clase de negocio Fiduciario</span></td>
  </tr>
  <tr>
    
    <td><%= calendar_date_select "fiduciascontrato", "fecha_fin", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :fiduciascontrato, :fecha_fin, :css_class =>"cerror"%></td>
    <td><%= text_field :fiduciascontrato, :nro_contrato,{ :class => "campo", :size => 15,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciascontrato, :nro_contrato, :css_class =>"cerror"%></td>
    <td><%= select(:fiduciascontrato, :tipo_contrato, select_tipocontrato,{ :include_blank => true },
         { :style=>"width:460px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        <%= error_message_on :fiduciascontrato, :tipo_contrato, :css_class =>"cerror"%></td>
    
  </tr>
</table>
<table width="100%" border="0" cellspacing="2" align="center" cellpadding="0">
  <tr class="odd1">
    <td width="15%"><span class="campos">Valor </span></td>
    <td width="37%"><span class="campos">Proyecto</span></td>
    <td width="18%"><span class="campos">Origen de recusos</span></td>
    <td width="30%"><span class="campos">Tipo de activos fideicomitidos</span></td>
  </tr>
  <tr>
    <td><%= text_field :fiduciascontrato, :valor,{ :class => "campo", :size => 16,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciascontrato, :valor, :css_class =>"cerror"%></td>
    <td><%= text_field :fiduciascontrato, :proyecto,{ :class => "campo", :size => 50,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciascontrato, :proyecto, :css_class =>"cerror"%></td>
    <td><%= select(:fiduciascontrato, :origen_recurso, select_originrecurso,{ :include_blank => true },
         { :style=>"width:120px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
