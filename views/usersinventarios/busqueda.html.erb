<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/usersinventariomin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">BUSCADOR INVENTARIOS POR USUARIOS</div></td>
              <td width="3%"><div align="right">
                     <%= link_to image_tag('nuevo.png',
	                            { :border=>0, :title => "Nuevo"}),new_usersinventario_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<% form_tag buscar_usersinventarios_path, :method => 'get' do %>
<div align="center">
<table width="70%" border="0" cellspacing="2" cellpadding="0">
    <tr>
      <td width="33%" height="20" class="campos" align="left">Elemento del Inventario</td>
      <td class="camposDesc" align="left"><%=select("ubicacion", "inventarioselemento_id", Inventarioselemento.find(:all,:order=>'descripcion').collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
       { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %></td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Usuario uso</td>
      <td class="camposDesc" align="left"><%=select("ubicacion", "usuario", select_user.collect {|p| [ p.nombre, p.id ] }, { :include_blank => true },
      { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %></td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Codigo Elemento</td>
      <td class="camposDesc" align="left">
        <%= text_field_tag :codigo, params[:codigo],{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
      </td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Dependencia</td>
      <td class="camposDesc" align="left"><%=select("ubicacion", "dependencia", Dependencia.find(:all,:order=>'descripcion').collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %></td>
    </tr>
    <tr>
      <td width="33%" height="20" class="campos" align="left">Serial</td>
      <td class="camposDesc" align="left">
        <%= text_field_tag :serial, params[:serial],{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
      </td>
    </tr>
</table>
<table width="80%" height="0" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
<table width="80%" border="0" cellpadding="2" align="center" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
    <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %>
          </span></div>
       <div class="uiButton"><img class="img" src="/images/excel.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'format', :value => 'xls' %>
          </span></div>
</div></td>
  </tr>
</table>
</div>
<% end %>
<br/>
