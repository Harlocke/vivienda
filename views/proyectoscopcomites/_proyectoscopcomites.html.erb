    <td width="12%" height="30" align="left" class="oce-first"></td>
  </tr>
<% for proyectoscopcomite in @proyectoscopropiedad.proyectoscopcomites.find(:all, :conditions=>["tipo = 'CONSEJO DE ADMINISTRACIÓN'"], :order => 'id ASC') %>
