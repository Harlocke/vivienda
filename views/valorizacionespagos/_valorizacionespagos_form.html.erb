<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="30%" class="campos" align="left">Tipo *</td>
        <td width="20%" class="campos" align="left">Fecha Solicitud *</td>
        <td width="20%" class="campos" align="left">Valor *</td>
        <td width="20%" class="campos" align="left">Fecha Desembolso *</td>
        <td width="10%" class="campos" align="left">Estado *</td>
        </tr>
      <tr>
        <td class="camposDesc" align="left"><%= select(:valorizacionespago,
                :tipo, select_tipopago, { :include_blank => true },{ :style=>"width:210px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        <%= error_message_on :valorizacionespago, :tipo, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= calendar_date_select "valorizacionespago", "fecha_solicitud", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
        <%= error_message_on :valorizacionespago, :fecha_solicitud, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :valorizacionespago, :valor,{ :class => "campo", :size => 15,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :valorizacionespago, :valor, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= calendar_date_select "valorizacionespago", "fecha_desembolso", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
        <%= error_message_on :valorizacionespago, :fecha_desembolso, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= select(:valorizacionespago, :estado, select_fonvalestado, { :include_blank => true },
                      { :style=>"width:150px", :class => "campo" })%>
        <%= error_message_on :valorizacionespago, :estado, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>

<table width="100%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :valorizacionespersona, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>
