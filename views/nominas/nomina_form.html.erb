<br/>
<% form_for(@nomina) do |f| %>
<div align="center">
<table width="60%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td><table width="100%" border="0" cellpadding="0" cellspacing="2">
          <tr class="odd1">
            <td width="40%" height="20" class="campos"><div align="left">Empleado</div></td>
