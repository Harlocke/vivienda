          </tr>
          <tr>
            <td height="20" class="campos"><div align="left">Otros Dev.</div></td>
            <td class="camposDesc"><div align="left"><%= f.text_field :otros_devengados,{ :class => "campo", :size => 20,:onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></div></td>
          </tr>
          <tr class="odd1">
            <td height="20" class="campos"><div align="left">Total a Pagar </div></td>
            <td class="campos"><div align="left"><%= f.text_field :total,{ :class => "campo", :size => 20,:onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></div></td>
          </tr>
     </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
          <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td class="camposNotas" align="left">
            <% unless @nomina.new_record? %>
            Ultima Actualizaci√≥n: <%=is_usernameuser(@nomina.useract_id) rescue nil%> - <%=@nomina.updated_at.strftime("%Y-%m-%d %X")%>
          <% end %></td>
