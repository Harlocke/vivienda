  <tr  valign="middle">
    <td style="font-size: 10px; font-family: tahoma; vertical-align:middle; vertical-align:middle;" height="30" bgcolor="#00CCFF" colspan="4"><strong>NOMBRE DEL PROCESO</strong></td>
    <td style="font-size: 10px; font-family: tahoma; vertical-align:middle;" colspan="5"><strong><%=@calidadproceso.tipoproceso rescue nil%> - <%=@calidadproceso.descripcion rescue nil%></strong></td>
