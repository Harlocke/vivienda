      <%=text_area(:ayudasobservacion, :observacion, :cols => 100, :rows => 5, :class => 'campo', :maxlength => 3900,
      :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
              <%= error_message_on :ayudasobservacion, :observacion, :css_class =>"cerror"%></td>
      </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
</td>
  </tr>
</table>
<table width="100%"  align="center" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :ayudasobservacion, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>