      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/soportemin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">SOLICITUDES DE SERVICIO</div></td>
              <td width="3%"><div align="right"> </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<% form_tag buscar_soportes_path, :method => 'get' do %>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="2">
  <tr class="odd1">
    <td width="50%" class="campos">Fecha Solicitud </td>
    <td width="50%" class="campos">Funcionario</td>
  </tr>
  <tr>
    <td class="camposDesc">&nbsp;&nbsp;Fecha Inicial &nbsp; <%= calendar_date_select "ubicacion", "fchinicial", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%> &nbsp;&nbsp;Fecha Final&nbsp; <%= calendar_date_select "ubicacion", "fchfinal", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%></td>
    <td class="camposDesc"><%=select("ubicacion", "usuario", User.find(:all, :order=>"nombre").collect {|p| [ p.nombre, p.id ] }, { :include_blank => true },
      { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %></td>
  </tr>
</table>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="2">
  <tr class="odd1">
    <td width="21%" class="campos">Prioridad</td>
    <td width="20%" class="campos">Tipo</td>
    <td width="42%" class="campos">Descripci&oacute;n</td>
    <td width="17%" class="campos">Solucionado</td>
  </tr>
  <tr>
    <td class="camposDesc"><%= select("ubicacion",:prioridad, { "ALTA" => 1,"MEDIA" => 2,"BAJA" => 3},{ :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></td>
    <td class="camposDesc"><%= select("ubicacion",:tipo, { "SOPORTE" => 1,"GARANTIA" => 2},{ :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></td>
    <td class="camposDesc"><%= text_field_tag :descripcion, params[:descripcion],{ :class => "campo", :size => 50,
                :onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></td>
    <td class="camposDesc"><%= select("ubicacion",:solucionado, { "SI" => 1,"NO" => 2},{ :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></td>
  </tr>
</table>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="2">
  <tr class="odd1">
    <td width="50%" class="campos">Funcionario Atendio Requerimiento </td>
    <td width="15%" class="campos">Numero Ticket</td>
    <td width="35%" class="campos">Tipo Requerimiento</td>
  </tr>
  <tr>
    <td class="camposDesc"><%=select("ubicacion", "funcionario",User.find(:all, :order=>"nombre").collect {|p| [ p.nombre, p.id ] }, { :include_blank => true },
      { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %></td>
    <td class="camposDesc"><%= text_field_tag :ticket, params[:ticket],{ :class => "campo", :size => 15,
                :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></td>
    <td class="camposDesc"><%= select("ubicacion",:tipo_requerimiento, [["SOPORTE SIFI",1],["SOPORTE TECNICO",2],["SOPORTE SERVICIOS GENERALES",3]],
                        { :include_blank => true },{ :style=>"width:250px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
    </td>
  </tr>
</table>
<table width="80%" height="0" align="center" border="0" cellpadding="0" cellspacing="0">
  <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
</table>
<table width="80%" border="0" align="center" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
      <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %>
          </span></div>
</div></td>
  </tr>
</table>

<% end %>
