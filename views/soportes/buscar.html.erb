<%=  javascript_include_tag :defaults %>
<table width="100%" height="40">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td width="3%"><img src="/images/requerimientomin.png" width="64" height="64"/></td>
          <td width="94%"><div class="col_enc">SOLICITUDES DE SERVICIO</div></td>
          <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
                { :border=>0, :title => "Listado de Soportes"}),busqueda_soportes_path %></div></td>
        </tr>
      </table></td>
  </tr>
</table><br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <!-- <td width="15%" height="30" class="oce-first" align="center">Usuario</td> -->
    <td width="15%" height="30" class="oce-first" align="center">Fecha</td>
    <td width="55%" class="oce-first">Descripcion</td>
    <td width="20%" class="oce-first">Solicitante</td>
    <td width="10%" class="oce-first">&nbsp;</td>
  </tr>
<% @soportes.each do |soporte| %>
  <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
   <!-- <td height="30" class="camposDesc"><div align="center"><%#=image_tag (Usersdato.find_by_user_id(soporte.user_id).userfoto.url(:thumb)) rescue nil%></div></td> -->
    <td height="30" class="camposDesc"><div align="center"><%=h soporte.created_at.strftime("%Y-%m-%d %X") %></div></td>
    <td class="camposDesc"><%=h soporte.descripcion %>
      <% if soporte.identificacion_jefe.to_s != "" %><br/>JH: <%=soporte.identificacion_jefe.to_s rescue nil%> - BEN: <%=soporte.identificacion_beneficario.to_s rescue nil%><%end%>
    </td>
    <td class="camposDesc"><%=h soporte.user.nombre rescue nil %></td>
    <td class="camposDesc"><div align="center"><%= link_to 'Editar', edit_soporte_path(soporte), :class=>"editarlink"%></div></td>
  </tr>
<% end %>
</table>
<table width="100%" height="0" align="center" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td height="10"><hr size="1" noshade class="hrlinea"/></td>
  </tr>
</table>
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="100%" height="30" class="camposDescN"><div align="center">Nro Total de Registro : <%=@soportes.count%></div></td>
  </tr>
</table>