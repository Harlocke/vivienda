<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/ipmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;ACCESOS IP</div></td>
              <td width="3%"><div align="right"> </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<BR/>
<div align="center">
<% if permiso("acceso","C").to_s == "S" %>
<table width="50%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
    <td><% form_remote_tag :url => {:action => 'add_acceso'}, :complete => "acceso_observacion.value=nil;acceso_ip.value=nil" do %>
<table width="100%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="20%" class="campos">IP</td>
     <td width="45%" class="campos">Descripcion</td>
     <td width="20%"></td>
   </tr>
   <tr>
     <td>
<%= text_field 'acceso', 'ip',{ :class => "campo",
                :size => 20,
                :onFocus => "this.style.border='1px solid #f00',this.value=''",
                :onBlur => "this.style.border='1px solid #bbb'",
                :onChange=> "javascript:this.value=this.value.toUpperCase();"
                 }  %></td>
     <td>
<%= text_field 'acceso', 'observacion',{ :class => "campo",
                :size => 70,
                :onFocus => "this.style.border='1px solid #f00',this.value=''",
                :onBlur => "this.style.border='1px solid #bbb'",
                :onChange=> "javascript:this.value=this.value.toUpperCase();"
                 }  %></td>
      <td>
    <div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
   </tr>
</table>

     <% end %></td>
  </tr>
</table>
<br />
<% end %>
</div>
<div id="acceso_list">
<%= render :partial => 'list' %>
