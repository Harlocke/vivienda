<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/solicitudalmacenmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">SOLICITUDES AL ALMACEN - <%=User.find(is_admin).nombre rescue nil%></div></td>
              <td width="3%"><div align="right">
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<div align="center">
<table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
    <td>&nbsp;
     <% form_remote_tag :url => {:action => 'add_almacenessolicitud'}, :complete => "almacenessolicitud_producto_descripcion.value=nil;almacenessolicitud_cantidad.value=nil"  do %>
      <div align="center">
        <table width="80%" border="0" cellspacing="2" cellpadding="0">
          <tr>
            <td width="75%"><span class="campos">Producto</span></td>
            <td width="15%"><span class="campos">Cantidad</span></td>
            <td width="10%">&nbsp;</td>
          </tr>
          <tr>
            <td>
       <%= text_field_with_auto_complete :almacenessolicitud, :producto_descripcion,
	    { :class => "campo",
                :size => 80,
                :maxlength => 50,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" },
	    { :url => listar_productos_path(:js), :method => :get, :with => "'search=' + element.value" } %></td>
            <td> <%= text_field 'almacenessolicitud', 'cantidad',{ :class => "campo",
                  :size => 10,
                  :onFocus => "this.style.border='1px solid #f00'",
                  :onBlur => "this.style.border='1px solid #bbb'"
                   }  %>
            </td>
            <td><div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td>
          </tr>
        </table>
      </div>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
     <% end %></td>
  </tr>
</table>

<br />
<div id="almacenessolicitud_list">
<%= render :partial => 'list' %>
</div>
<br/>
<% if @existesolicitud %>
<%= link_to 'Enviar Solicitud al Almacen', envio_almacenessolicitudes_path, :class=>"verlink", :confirm=>"Esta Seguro que desea solicitar estos elementos al Almacen?" %>
<% end %>
</div>

