<% form_tag buscar_localescomerciales_path, :method => 'get' do %>
    <div align="center">
   <table width="70%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
          <td width="33%" height="20" class="campos" align="left">Fecha</td>
          <td class="camposDesc" align="left">
            <%= calendar_date_select "ubicacion", "fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
        </td>
      </tr>
      <tr >
          <td width="33%" height="20" class="campos" align="left">Escritura publica</td>
          <td class="camposDesc" align="left">
              <%= text_field_tag :escritura, params[:escritura],{ :class => "campo", :size => 10,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
         </td>
        </td>
      </tr>
      <tr class="odd1">
            <td width="33%" height="20" class="campos" align="left">Proyectos</td>
            <td class="camposDesc" align="left">
                <%= select("ubicacion","proyecto",select_proyectoslocales, { :include_blank => true },
                      { :style=>"width:220px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
         </td>
        </td>
      </tr>      
  </table>
    <table width="80%" height="0" border="0" align="center" cellpadding="0" cellspacing="0">
          <tr>
            <td height="10"><hr size="1" noshade class="hrlinea"/></td>
          </tr>
    </table>
    <table width="80%" border="0" cellpadding="2" align="center" cellspacing="2">
      <tr>
        <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
          <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %>
              </span></div>
          </div></td>
      </tr>
    </table>
    </div>
<% end %>   
