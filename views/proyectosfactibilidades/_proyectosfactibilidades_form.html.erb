<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td>
        <table width="100%" border="0" cellspacing="2" cellpadding="0">
          <tr class="odd1">
          <td width="20%" class="campos">Fecha</td>
          <td width="80%" class="campos">Fase - Actividad</td>
        </tr>
          <tr>
            <td><%= calendar_date_select "proyectosfactibilidad", "fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
            <strong><%= error_message_on :proyectosfactibilidad, :fecha, :css_class=>"cerror"%></strong></td>
          <td>
              <%=select("proyectosfactibilidad", "tiposfactibilidad_id", Tiposfactibilidad.find(:all, :order=>"id").collect {|p| [ p.descripcioncompleta, p.id ] }, { :include_blank => true },
                  { :style=>"width:700px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
            <%= error_message_on :proyectosfactibilidad, :tiposfactibilidad_id, :css_class =>"cerror"%></td>
          </tr>
        </table>
        <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td height="10"><hr size="1" noshade class="hrlinea"/></td>
          </tr>
        </table>        
        <table width="100%" border="0" cellpadding="2" cellspacing="2">
          <tr>
            <td  height="30"><div align="right">
                <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :proyectosfactibilidad, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
        </div></td>
          </tr>
        </table>
    </td>
  </tr>
</table>