<div align="center">
<table width="50%" border="0" align="center" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr>
        <td width="73%" class="campos" align="left">Descripcion del Archivo a Cargar</td>
        <td width="27%" class="campos" align="left">Archivo a Cargar</td>
      </tr>
      <tr>
        <td class="camposDesc" align="left">
        <% if @iguana.clasereasentamiento.to_s == 'SANLUIS' %>
              <%=f.select("iguanastipo_id", Iguanastipo.find(:all, :order => 'descripcion').collect {|p| [ p.descripcion.to_s, p.id ] }, { :include_blank => true },
              { :style=>"width:480px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
              <%= f.error_message_on :iguanastipo_id, :css_class =>"cerror"%>
          <% else %>
            <%= f.text_field :descripcion ,{ :class => "campo", :size =>60,
                    :onFocus => "this.style.border='1px solid #f00'",
                    :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= f.error_message_on :descripcion, :css_class =>"cerror"%>
          <% end %>
        </td>
        <td class="camposDesc" align="left"><%= f.file_field :iguana,
            { :class => "campo",
              :size => 46,
              :maxlength => 1000,
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" } %></td>
      </tr>
    </table>
	
    </td>
  </tr>
</table>
</div>