<table width="850" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
        <tr>
          <td width="70%" align="left" class="campos">Etapa *</td>
          <td width="15%" align="left" class="campos">Fecha Limite</td>
          <td width="15%" align="left" class="campos">Fecha Actuacion</td>
        </tr>
        <tr>
          <td align="left" class="camposDesc">
              <%=select("procesosetapa", "etapasproceso_id", Etapasproceso.find(:all, :order =>["descripcion"]).collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
               { :style=>"width:500px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
          <%= error_message_on :procesosetapa, :etapasproceso_id, :css_class =>"cerror"%></td>
          <td align="left" class="camposDesc"><%= calendar_date_select "procesosetapa", "fecha_limite", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :procesosetapa, :fecha_limite, :css_class =>"cerror"%></td>
          <td align="left" class="camposDesc"><%= calendar_date_select "procesosetapa", "fecha_actuacion", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :procesosetapa, :fecha_actuacion, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" border="0" cellspacing="2" cellpadding="0">
        <tr>
          <td align="left" class="campos">Observacion</td>
          <td align="left" class="campos">Resultado Fallo</td>
          <td align="left" class="campos">Estado Fallo</td>
        </tr>
        <tr>
          <td align="left" class="camposDesc">
              <%= text_area :procesosetapa, :observaciones,{ :class => "campoMultiLinea", :cols=>"90", :rows=>"4",
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :procesosetapa, :observaciones, :css_class =>"cerror"%></td>
           <td valign="top" class="camposDesc"><%= select(:procesosetapa,
                         :estado, { "ABSUELVE" => "1",
                           "CONDENA TOTAL" => "2",
                           "CONDENA PARCIAL" => "3",
                         "SE CONCILIA" => "4",
                       "NO SE CONCILIA" => "5"},
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
             <%= error_message_on :procesosetapa, :estado, :css_class =>"cerror"%></td>
           <td valign="top" class="camposDesc"><%= select(:procesosetapa,
                         :firmeza_fallo, { "ANULADO" => "1",
                           "EN EJECUCION" => "2"},
                        { :include_blank => true },
                      { :style=>"width:130px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
             <%= error_message_on :procesosetapa, :firmeza_fallo, :css_class =>"cerror"%></td>
        </tr>
      </table>
<table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
<table width="100%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>
    </td>
  </tr>
</table>


