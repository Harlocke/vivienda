<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40"  align="center">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0"  align="center">
        <tr>
          <td width="3%"><img src="/images/transportemin.png" width="64" height="64"/></td>
          <td width="93%"><div class="col_enc">&nbsp;&nbsp;VEHICULOS</div></td>
        </tr>
      </table></td>
  </tr>
</table>
<br/>
<div align="center">
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="10%" height="30" class="oce-first">Placa</td>
    <td width="20%" height="30" class="oce-first">Identificacion</td>
    <td width="35%" height="30" class="oce-first">Nombre</td>
    <td width="15%" class="oce-first">Telefonos</td>
    <td width="15%" class="oce-first">Estado</td>
    <td width="5%" class="oce-first">&nbsp;</td>
  </tr>
<% @vehiculos.each do |vehiculo| %>
  <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
    <td class="camposDesc"><%=h vehiculo.placa %></td>
    <td class="camposDesc"><%=h vehiculo.identificacion %></td>
    <td class="camposDesc"><%=h vehiculo.nombre %></td>
    <td class="camposDesc"><%=h vehiculo.telefono %> - <%=h vehiculo.celular %></td>
    <td class="camposDesc"><%=h vehiculo.estado %></td>
    <td class="camposDesc"><%= link_to 'Editar', edit_vehiculo_path(vehiculo), :class=>"editarlink" %></td>
  </tr>
<% end %>
</table>
</div>
<br />
