<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td width="3%"><img src="/images/transportemin.png" width="64" height="64"/></td>
          <td width="94%"><div class="col_enc">INFORMACION VEHICULOS</div></td>
          <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
                { :border=>0, :title => "Buscar"}),{:controller=>"vehiculos", :action=>"indexc", :id=>1} %>
            </div></td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<% form_for(@vehiculo) do |f| %>
<div align="center">
    <table width="80%" border="0" cellpadding="0" cellspacing="2">
      <tr class="odd1">
        <td width="30%" height="20" class="campos">Placa</td>
        <td width="70%" class="camposDesc"><%= f.text_field :placa ,{ :class => "campo", :size => 20,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
        <strong><%= error_message_on :vehiculo, :placa, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr>
        <td height="20" class="campos">Identificacion</td>
        <td class="camposDesc"><%= f.text_field :identificacion ,{ :class => "campo", :size => 20,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
        <strong><%= error_message_on :vehiculo, :identificacion, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr class="odd1">
        <td height="20" class="campos">Nombre</td>
        <td class="camposDesc"><%= f.text_field :nombre ,{ :class => "campo", :size => 60,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
        <strong><%= error_message_on :vehiculo, :nombre, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr>
        <td height="20" class="campos">Telefono</td>
        <td class="camposDesc"><%= f.text_field :telefono ,{ :class => "campo", :size => 20,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
        <strong><%= error_message_on :vehiculo, :telefono, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr class="odd1">
        <td height="20" class="campos">Celular</td>
        <td class="camposDesc"><%= f.text_field :celular ,{ :class => "campo", :size => 20,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
        <strong><%= error_message_on :vehiculo, :celular, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr class="odd1">
        <td height="20" class="campos">Estado</td>
        <td class="camposDesc">
                   <%= select(:vehiculo,:estado, [["ACTIVO","ACTIVO"],["INACTIVO","INACTIVO"]],
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo" })%>
        <strong><%= error_message_on :vehiculo, :estado, :css_class =>"cerror"%></strong></td>
      </tr>
      <tr class="odd1">
        <td height="20" class="campos">Imagen</td>
        <td class="camposDesc">
                   <%= select(:vehiculo,:imagen, [["VAN","vehiculo"],["NORMAL","vehiculo1"]],
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo" })%>
        <strong><%= error_message_on :vehiculo, :imagen, :css_class =>"cerror"%></strong></td>
      </tr>
      <% unless @vehiculo.new_record? %>
      <tr>
        <td height="20" class="campos">Actualizaci√≥n de la solicitud</td>
        <td class="camposDesc"><%=@vehiculo.updated_at.strftime("%Y-%m-%d %X") rescue nil%></td>
      </tr>
      <% end %>
    </table>
    <table width="80%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="80%" border="0" cellpadding="2" cellspacing="2">
      <tr>
        <td  height="30"><div align="right">
            <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div></td>
      </tr>
    </table>
</div>
<% end %>
