<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <th class="oce-first">Fecha Actuacion</th>
    <th class="oce-first">Indique la observacion que desea registrar</th>
  </tr>
  <tr valign="top">
    <td><%= calendar_date_select "titulacionesseguimiento", "fecha", :year_range =>select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
        <%= f.error_message_on :fecha, :css_class =>"cerror"%></td>
    <td><%=f.text_area(:observacion, :cols => 150, :rows => 4, :class => 'campo', :maxlength => 3900,:onChange=> "javascript:this.value=this.value.toUpperCase();") %>
        <%= f.error_message_on :observacion, :css_class =>"cerror"%></td>
  </tr>
</table>
