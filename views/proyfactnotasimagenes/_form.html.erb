<table width="100%" border="0" cellpadding="2" cellspacing="2" align="center">
  <tr>
    <td height="30"><div class="col_enc">DOCUMENTOS DIGITALES REALACIONADOS A LA ACTIVIDAD</div></td>
  </tr>
  <tr>
    <td height="10"></td>
  </tr>
</table>
<br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="40%" height="30" class="oce-first" align="left">Etapa</td>
    <td width="10%" height="30" class="oce-first" align="left">Fecha</td>
    <td width="50%" height="30" class="oce-first" align="left">Actividad</td>
  </tr>
   <tr>
     <td height="30" class="camposDesc"><%=@proyfactnota.proyectosfactibilidad.tiposfactibilidad.descripcionfase rescue nil%> </td>
     <td height="30" class="camposDesc"><%=@proyfactnota.proyectosfactibilidad.fecha.strftime("%Y-%m-%d") rescue nil%> </td>
     <td height="30" class="camposDesc"><%=@proyfactnota.proyectosfactibilidad.tiposfactibilidad.actividad rescue nil%> </td>
 </tr>  
  <tr valign="middle">
    <td width="100%" height="30" colspan="3" class="oce-first" align="left">Observacion</td>
  </tr>
   <tr>
     <td height="30" class="camposDesc" colspan="3" ><%=@proyfactnota.observaciones rescue nil%> </td>
 </tr>    
</table>
<br/>
<table width="70%" align="center">
  <tr>
    <td class="campos">Descripcion : *</td>
    <td><%= f.text_field :descripcion,{ :class => "campo", :size => 50,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
      <strong><%= f.error_message_on :descripcion, :css_class =>"cerror"%></strong></td>
  </tr>
  <tr>
    <td class="campos">Archivo :</td>
     <td class="camposdesc"><%= f.file_field :factibilidad, {
              :size => 100,
              :maxlength => 1000,
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" } %>     
       <strong><%= f.error_message_on :factibilidad, :css_class =>"cerror"%></strong></td>
  </tr>
</table>
</br>
