<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="25%" class="campos" align="left">Porcentaje habilitado de pagos *</td>
        <td width="25%" class="campos" align="left">Clase *</td>
        <td width="25%" class="campos" align="left">Resolucion *</td>
        <td width="25%" class="campos" align="left">Porc. Avance *</td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left"><%= text_field :conveniosforma, :porcentaje,{ :class => "campo", :size => 15,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :conveniosforma, :porcentaje, :css_class =>"cerror"%></td>
        <td><%= select(:conveniosforma,
                :clase, { "EJECUCION" => "EJECUCION",
                           "DIAGNOSTICO" => "DIAGNOSTICO"},
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        <%= error_message_on :conveniosforma, :clase, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left">
          <%=select("conveniosforma", "resolucion_id", Resolucion.find(:all, :conditions => [" id in (select resolucion_id from conveniosresoluciones where convenio_id = #{@convenio.id})"]).collect {|p| [ p.nro_resolucion, p.id ] }, { :include_blank => true },
           { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
        <%= error_message_on :conveniosforma, :resolucion_id, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :conveniosforma, :porc_avance,{ :class => "campo", :size => 15,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :conveniosforma, :porc_avance, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr><td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :conveniosforma, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td></tr>
    </table>
    </td>
  </tr>
</table>
