<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/asociarmin.png" width="64" height="64"/></td>
              <td width="97%"><div class="col_enc">ASOCIACION DE PERSONA A VIVIENDA</div></td>
            </tr>
          </table></td>
      </tr>
</table>

<% form_for([@vivienda,@viviendaspersona]) do |f| %>
  <%= f.error_messages %>

<table width="70%" border="0" align="center" cellpadding="0" cellspacing="0" id="one-column-emphasis">
  <tr valign="middle">
    <td width="40%" class="camposDesc"><div align="right"><strong>Proyecto :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" class="camposDesc"><%= @vivienda.proyecto.descripcion  rescue nil%></td>
  </tr>
  <tr valign="middle">
    <td class="camposDesc"><div align="right"><strong>Bloque :&nbsp;&nbsp;</strong></div></td>
    <td class="camposDesc"><%= @vivienda.bloque.descripcion rescue nil %></td>
  </tr>
  <tr valign="middle">
    <td class="camposDesc"><div align="right"><strong>Piso :&nbsp;&nbsp;</strong></div></td>
    <td class="camposDesc"><%= @vivienda.piso.descripcion  rescue nil%></td>
  </tr>
  <tr valign="middle">
    <td class="camposDesc"><div align="right"><strong>Apartamento :&nbsp;&nbsp;</strong></div></td>
    <td class="camposDesc"><%= @vivienda.apto.descripcion  rescue nil%></td>
  </tr>
  <tr valign="middle">
    <td  class="camposDesc"><div align="right"><strong>Identificacion Usuario :&nbsp;&nbsp;</strong></div></td>
    <td  class="camposDesc">
<%= text_field_with_auto_complete :viviendaspersona, :persona_autobuscar,
	    { :class => "campo",
                :size => 100,
                :maxlength => 50,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" },
	    { :url => listar_personas_path(:js), :method => :get, :with => "'search=' + element.value" } %>
    </td>
  </tr>
  <tr valign="middle">
    <td  class="camposDesc"><div align="right"></div></td>
    <td  class="camposDesc"></td>
  </tr>
</table>
<table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
<table width="100%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= f.submit 'Realizar Asociacion' %></span></div>
</div></td>
  </tr>
</table>
<% end %>