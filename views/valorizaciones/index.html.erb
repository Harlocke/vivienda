<% form_tag buscar_valorizaciones_path, :method => 'get' do %>
<div align="center">
<table width="75%" border="0" cellpadding="0" cellspacing="0">
  <tr class="odd1">
      <td width="30%" height="20" class="campos"><div align="left">Proyecto</div></td>
      <td width="70%" class="camposDesc"><div align="left">
        <%= select("ubicacion","valorizacionesobra_id",select_valorizacionesobra.collect {|p| [ p.descripcion, p.id ] },
                        { :include_blank => true },
                      { :style=>"width:450px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        </div></td>
    </tr>
    <tr>
      <td height="20" class="campos"><div align="left">Cobama</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :cobama, params[:cobama],{ :class => "campo", :size => 20,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
    <tr class="odd1">
      <td height="20" class="campos"><div align="left">Identificaci√≥n propietario</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :identificacion, params[:identificacion],{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
    <tr>
      <td height="20" class="campos"><div align="left">Estado</div></td>
      <td class="camposDesc"><div align="left"><%= select("ubicacion","valorizacionesestado_id",select_valorizacionesestado.collect {|p| [ p.descripcion, p.id ] },
                        { :include_blank => true },
                      { :style=>"width:450px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        </div></td>
    </tr>
</table>
