<table width="100%" border="0" cellspacing="2" cellpadding="0">
          <tr class="odd1">
            <td width="20%" align="left" class="campos">Estado Visita</td>
            <td width="35%" align="left" class="campos">Nombre usuario</td>
            <td width="35%" align="left" class="campos">Observacion</td>
          </tr>
        <tr valign="top">
<td ><%= select(:titulacionesfallido,:estado_visita, [["ASIGNADO","ASIGNADO"],
                  ["EFECTIVO","EFECTIVO"],
                  ["FALLIDO","FALLIDO"],
                  ["INCOMPLETO","INCOMPLETO"],
                ["REASIGNADO","REASIGNADO"]],
                      { :include_blank => true },
                    { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
    <%= error_message_on :titulacionesfallido, :estado_visita, :css_class =>"cerror"%></td>
<td class="camposDesc"><%= text_field :titulacionesfallido, :nombre_fallido,{ :class => "campo", :size => "45",
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
      <%= error_message_on :titulacionesfallido, :nombre_fallido, :css_class =>"cerror"%></td>
<td class="camposDesc" align="left" >
     <%= text_area(:titulacionesfallido, :observacion_fallido, :cols => 50, :rows => 4, :class => 'campo', :maxlength => 4000,
     :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
      <%= error_message_on :titulacionesfallido, :observacion_fallido, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
    <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :titulacionesfallido, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>