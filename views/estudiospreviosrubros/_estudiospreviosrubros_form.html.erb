<table width="100%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td width="157"><span class="campos">Rubro</span></td>
    <td width="250"><span class="campos">Valor</span></td>
  </tr>
  <tr>
    <td width="90%" align="left"><%=select("estudiospreviosrubro", "rubro_id", Rubro.find(:all,:conditions=>["estado = 'A' and anno = '2018'"], :order=>"id").collect {|p| [ p.codigo_corto + ' - ' + p.descripcion, p.id ] }, { :include_blank => true },
    { :style=>"width:520px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
    <%= error_message_on :estudiospreviosrubro, :rubro_id, :css_class =>"cerror"%></td>
    <td align="left"><%= text_field :estudiospreviosrubro,  :valor,{ :class => "campo", :size => 20,
              :onChange=> "javascript:this.value=this.value.toUpperCase();",
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :estudiospreviosrubro, :valor, :css_class =>"cerror"%></td>
  </tr>
</table>
<table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td height="10"><hr size="1" noshade class="hrlinea"/></td>
  </tr>
</table>
<table width="100%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :estudiospreviosrubro, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td>
  </tr>
</table>
<br/>

