        <div class="uiButton"><img class="img" src="/images/cancel.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= link_to 'Regresar', {:controller=>"cruces", :action=>"mostrar", :persona_id =>@crucesdato.cruce.persona_id,:id=>1}%></span></div>
