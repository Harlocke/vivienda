<% form_for(@crucesdato) do |f| %>
<br/>
<div align="center">
<table width="80%" border="0" cellspacing="2" cellpadding="0">
  <tr>
    <td width="40%" height="20" class="campos" align="left">Nombre Entidad</td>
    <td width="60%" class="camposDesc" align="left"><%=@crucesdato.nombre_entidad%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Identificación - Apellidos Nombres</td>
    <td class="camposDesc" align="left"><%=@crucesdato.identificacion%> <%=@crucesdato.nombres%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Dirección Inmueble</td>
    <td class="camposDesc" align="left"><%=@crucesdato.direccion_inmueble%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Dpto</td>
    <td class="camposDesc" align="left"><%=@crucesdato.departamento%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Mpio</td>
    <td class="camposDesc" align="left"><%=@crucesdato.municipio%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Matricula Inmobiliaria</td>
    <td class="camposDesc" align="left"><%=@crucesdato.matricula%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Cedula Catastral</td>
    <td class="camposDesc" align="left"><%=@crucesdato.cedula_catastral%></td>
  </tr>
  <tr>
    <td height="20" class="campos" align="left">Indique las observaciones de porque va realizar el levantemiento del cruce.</td>
    <td class="camposDesc" align="left">
      <%=text_area(:crucesdato, :ratifica_observaciones, :cols => 80, :rows => 4, :class => 'campo',:maxlength => 4000,
       :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
