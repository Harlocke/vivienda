<table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr>
          <td width="34%"><span class="campos">Radicado Entrada *</span></td>
          <td width="30%"><span class="campos">Motivo *</span></td>
          <td width="16%"><span class="campos">Tipo Autorizacion *</span></td>
          <td width="20%"><span class="campos">Respuesta *</span></td>
        </tr>
        <tr>
          <td><%= text_field :personassesion, :radicado_entrada,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
          <%= error_message_on :personassesion, :radicado_entrada, :css_class =>"cerror"%>
          -<%= calendar_date_select "personassesion", "radient_fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :personassesion, :radient_fecha, :css_class =>"cerror"%></td>
          <td><%= select(:personassesion,
                :motivo, { "SALUD" => "SALUD",
                           "OPCIONES - TRABAJO" => "OPCIONES - TRABAJO",
                           "AMENAZAS - INSEGURIDAD" => "AMENAZAS - INSEGURIDAD",
                           "OTROS" => "OTROS"},
                        { :include_blank => true },
                      { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
          <%= error_message_on :personassesion, :motivo, :css_class =>"cerror"%></td>
          <td><%= select(:personassesion,
                :tipo, { "VENTA" => "VENTA",
                         "ARRIENDO" => "ARRIENDO",
                         "VENTA Y/O ARRIENDO" => "VENTA Y/O ARRIENDO"},
                        { :include_blank => true },
                      { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
          <%= error_message_on :personassesion, :tipo, :css_class =>"cerror"%></td>
          <td><%= select(:personassesion,
                :respuesta, { "SE ACEPTA" => "SE ACEPTA",
                         "SE NIEGA" => "SE NIEGA",
                         "EN TRAMITE" => "EN TRAMITE"},
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
          <%= error_message_on :personassesion, :respuesta, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr>
          <td width="70%"><span class="campos">Observaciones</span></td>
          <td width="30%"><span class="campos">Radicado Respuesta</span></td>
        </tr>
        <tr valign="top">
          <td><%= text_area(:personassesion, :observacion, :cols => 100, :rows => 4, :class => 'campo',
                :onChange=> "javascript:this.value=this.value.toUpperCase();") %></td>
          <td><%= text_field :personassesion, :radicado_salida,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
          <%= error_message_on :personassesion, :radicado_salida, :css_class =>"cerror"%>
          -<%= calendar_date_select "personassesion", "radisal_fecha", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
          <%= error_message_on :personassesion, :radisal_fecha, :css_class =>"cerror"%></td>
        </tr>
      </table>
<table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td height="10"><hr size="1" noshade class="hrlinea"/></td>
  </tr>
</table>
<table width="100%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :personassesion, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>
<br/>
