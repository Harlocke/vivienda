<table width="95%"  border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="25%" class="campos">Pago</td>
          <td width="20%" class="campos">Mes</td>
          <td width="15%" class="campos">Fecha Pago </td>
          <td width="25%" class="campos">Valor a Pagar</td>
          <td width="15%" class="campos">Próximo Pago</td>
        </tr>
        <tr>
          <td><%= text_field :ayudaspago, :pago, { :class => "campo", :size => 30,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= error_message_on :ayudaspago, :pago, :css_class =>"cerror"%></td>
          <td><%= select( "ayudaspago", "mes_de_pago", select_mespagado,
                { :include_blank => true },
                { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudaspago, :mes_de_pago , :css_class =>"cerror"%></td>
          <td><%= calendar_date_select "ayudaspago", "fecha_de_pago", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudaspago, :fecha_de_pago, :css_class =>"cerror"%></td>
          <td><%= text_field :ayudaspago, :valor_a_pagar , { :class => "campo", :size => 30,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= error_message_on :ayudaspago, :valor_a_pagar , :css_class =>"cerror"%></td>
          <td><%= calendar_date_select "ayudaspago", "proximo_pago", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudaspago, :proximo_pago, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="25%" class="campos">Estado del Pago</td>
          <td width="15%" class="campos">Número de Pago</td>
          <td width="20%" class="campos">Código Cheque</td>
          <td width="40%" class="campos">Observación</td>
        </tr>
        <tr valign="top">
          <td><%= select( "ayudaspago", "estado_de_pago", select_estadopago,
                { :include_blank => true },
                { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudaspago, :estado_de_pago , :css_class =>"cerror"%></td>
          <td><%= text_field :ayudaspago, :num_pago , { :class => "campo", :size => 15,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= error_message_on :ayudaspago, :num_pago , :css_class =>"cerror"%></td>
          <td><%= text_field :ayudaspago, :codigo_cheque, { :class => "campo", :size => 30,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= error_message_on :ayudaspago, :codigo_cheque, :css_class =>"cerror"%></td>
          <td><%=text_area(:ayudaspago, :observacion, :cols => 50, :rows => 3, :class => 'campo', :maxlength => 3900,
              :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
              <%= error_message_on :ayudaspago, :observacion, :css_class =>"cerror"%>
          </td>
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td  height="30">
            <div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :ayudaspago, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>