    </tr>
    <tr class="odd1">
      <td class="campos">Fecha</td>
      <td class="campos"><%= calendar_date_select "calidadversion", "fecha", :year_range => 5.years.ago..0.years.ago, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%></td>
    </tr>
    <tr>
      <td class="campos">Pagina</td>
      <td class="campos"><%= f.text_field :pagina,{ :class => "campo", :size =>20,:onChange=> "javascript:this.value=this.value.toUpperCase();",
            :onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></td>
    </tr>
  </table>
  <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
