<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="30%" height="30" class="oce-first" align="left">Codigo</td>
    <td width="30%" height="30" class="oce-first" align="left">Tipo de Documento</td>
    <td width="30%" height="30" class="oce-first" align="left">Nombre</td>
    <td width="30%" height="30" class="oce-first" align="left">Version</td>
  </tr>
   <tr>
     <td height="30" class="camposDesc"><%=@calidaddocumento.codigo rescue nil%></td>
     <td height="30" class="camposDesc"><%=@calidaddocumento.tipodocumento%> </td>
     <td height="30" class="camposDesc"><%=@calidaddocumento.nombre%> </td>
     <td height="30" class="camposDesc"><%=@calidaddocumento.version%> </td>
 </tr>
</table>
<BR/>
   <br>
<table width="80%" height="40" align="center" >
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;DOCUMENTOS DIGITALES</div></td>
            </tr>
          </table></td>
      </tr>
</table>
<table width="70%" align="center">
  <tr>
    <td class="campos">Descripcion : *</td>
    <td><%= f.text_field :descripcion,{ :class => "campo", :size => 100,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
      <strong><%= f.error_message_on :descripcion, :css_class =>"cerror"%></strong></td>
  </tr>
  <tr>
    <td class="campos">Archivo :</td>
     <td class="camposdesc"><%= f.file_field :calidaddocumento, {
              :size => 80,
              :maxlength => 1000,
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" } %>     
       <strong><%= f.error_message_on :calidaddocumento, :css_class =>"cerror"%></strong></td>
  </tr>
</table>
</br>
