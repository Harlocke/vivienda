<table width="100%" border="0" cellspacing="2" align="center" cellpadding="0">
  <tr class="odd1">
    <td width="15%"><span class="campos">NrÂ° de pago *</span></td>
    <td width="15%"><span class="campos">Fecha de pago</span></td>
    <td width="20%"><span class="campos">Tipo cuenta </span></td>
    <td width="30%"><span class="campos">Nombre de la cuenta</span></td>
    <td width="20%"><span class="campos">Cuenta</span></td>
    
  </tr>
  <tr>
    <td><%= text_field :fiduciaspago, :nro_pago,{ :class => "campo", :size => 15,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
    <%= error_message_on :fiduciaspago, :nro_pago, :css_class =>"cerror"%></td>
    <td><%= calendar_date_select "fiduciaspago", "fecha_pago", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%></td>
    <td><%= text_field :fiduciaspago, :tipo_cuenta,{ :class => "campo", :size => 25,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :fiduciaspago, :tipo_cuenta, :css_class =>"cerror"%></td>
    <td><%= text_field :fiduciaspago, :nombre_cuenta,{ :class => "campo", :size => 40,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :fiduciaspago, :nombre_cuenta, :css_class =>"cerror"%></td>
    <td><%= text_field :fiduciaspago, :cuenta,{ :class => "campo", :size => 20,
                       :onChange=> "javascript:this.value=this.value.toUpperCase();",
                       :onFocus => "this.style.border='1px solid #f00'",
                       :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :fiduciaspago, :cuenta, :css_class =>"cerror"%></td>  
  </tr>
</table>
