          <td align="left" class="camposDesc"><%= select(:empleadoscapacitacion,
                :recursos , { "DE EQUIPO" => "E",
                           "DE PERSONAL" => "P"},
                        { :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></td>
        </tr>
      </table>
