          <td align="left" class="camposDesc"><%= text_field :empleadoscapacitacion, :calificacion_proveedor,{ :class => "campo", :size => 40,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
          <td align="left" class="camposDesc"><%= select(:empleadoscapacitacion,
