<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/seguridadmin.png" width="64" height="64"/></td>
              <td width="97%"><div class="col_enc">CAMBIO DE CONTRASEÑA</div></td>
            </tr>
          </table></td>
      </tr>
</table>
<% form_for :user, :url => { :action => "updatepass", :id => @user.id } do |f| %>
<table width="60%" align="center" id="one-column-emphasis">
  <tr>
    <td class="campos" width="294" height="30">Nombre</td>
    <td width="664" class="campos"><%= @user.nombre.upcase%></td>
  </tr>
  <tr>
    <td class="campos" width="294" height="30">Usuario</td>
    <td width="664" class="campos"><%= @user.username%></td>
  </tr>
  <tr>
    <td class="campos" height="30">Clave</td>
    <td><%= f.password_field :password,{ :class => "campo",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
  </tr>
    <tr>
    <td class="campos" height="30">Confirmación de clave</td>
    <td><%= f.password_field :password_confirmation,{ :class => "campo",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
  </tr>
</table>
<table width="60%" height="0" border="0" cellpadding="0" align="center" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
<table width="60%" border="0" cellpadding="2" align="center" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= f.submit "Guardar" %></span></div>
        <div class="uiButton"><img class="img" src="/images/cancel.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= link_to 'Cancelar', menus_path, :class=>"link" %></span></div>
</div></td>
  </tr>
</table>
   <% end %>
