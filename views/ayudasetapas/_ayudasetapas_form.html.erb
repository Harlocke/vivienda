<table width="95%"  border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="40%" class="campos">Clasificación</td>
          <td width="30%" class="campos">Etapa</td>
          <td width="30%" class="campos">Fecha de Realización</td>
        </tr>
        <tr>
          <td><%= chain_select_stand_alone(:aclasificacion, :prefix => 'ayudasetapa',:value=>@ayudasetapa.aclasificacion) %>
         <strong><%= error_message_on :ayudasetapa, :aclasificacion, :css_class =>"cerror"%></strong></td>
         <td><%= chain_select_stand_alone(:aetapa, :prefix => 'ayudasetapa', :parent =>@ayudasetapa.aclasificacion, :value=>@ayudasetapa.aetapa) %>
         <strong><%= error_message_on :ayudasetapa, :aetapa, :css_class=>"cerror"%></strong></td>
         <td><%= calendar_date_select "ayudasetapa", "fecha", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudasetapa, :fecha, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td height="30"><div align="right"><%= chain_select_indicator_stand_alone('ayudasetapa')%>
            <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :ayudasetapa, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>