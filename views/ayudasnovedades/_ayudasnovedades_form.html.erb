
<table width="95%"  border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="30%" class="campos">Tipo Novedad</td>
          <td width="15%" class="campos">Prioridad</td>
          <td width="40%" class="campos">Tipo Derivaci√≥n</td>
          <td width="15%" class="campos">Fecha Ingreso</td>
        </tr>
        <tr>
          <td><%= select(:ayudasnovedad, :tipo_de_novedad, select_tiponovedad,{ :include_blank => true },
                        { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudasnovedad, :tipo_de_novedad, :css_class =>"cerror"%></td>
          <td><%= select(:ayudasnovedad, :prioridad, select_prioridad,{ :include_blank => true },
                        { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudasnovedad, :prioridad, :css_class =>"cerror"%></td>
          <td><%= select(:ayudasnovedad, :tipo_de_derivacion, select_tipoderivada,{ :include_blank => true },
                        { :style=>"width:300px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudasnovedad, :tipo_de_derivacion, :css_class =>"cerror"%></td>
          <td><%= calendar_date_select "ayudasnovedad", "fecha_de_ingreso", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudasnovedad, :fecha_de_ingreso, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="20%" class="campos">Nro Contrato</td>
          <td width="80%" class="campos">Valor</td>
        </tr>
        <tr>
        <td><%= text_field :ayudasnovedad, :numero_contrato, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudasnovedad, :numero_contrato, :css_class =>"cerror"%></td>
        <td><%= text_field :ayudasnovedad, :contratoeventualidad_valor, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudasnovedad, :contratoeventualidad_valor, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
         <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td  height="30">
            <div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :ayudasnovedad, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>