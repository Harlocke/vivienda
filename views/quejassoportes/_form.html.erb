<table width="80%" height="40" align="center" >
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;SOPORTE DIGITAL DE OBSERVACION</div></td>
            </tr>
          </table></td>
      </tr>
</table>
<table width="70%" align="center">
  <tr>
    <td class="campos">Descripcion : *</td>
    <td><%= f.text_field :descripcion,{ :class => "campo", :size => 70,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
      <strong><%= f.error_message_on :descripcion, :css_class =>"cerror"%></strong></td>
  </tr>
  <tr>
    <td class="campos">Archivo :</td>
     <td class="camposdesc"><%= f.file_field :queja, {
              :size => 80,
              :maxlength => 1000,
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" } %>     
       <strong><%= f.error_message_on :queja, :css_class =>"cerror"%></strong></td>
  </tr>
</table>
