<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/indicadoresmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;INFORMACIÓN INDICADOR - <%=@indicadoresvariable.indicador.nombreindicador rescue nil%></div></td>
              <td width="3%"><div align="right">
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<% form_for @indicadoresvariable do |f| %>
<table width="837"  border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="40%" class="campos">Tipo</td>
          <td><%=@indicadoresvariable.tipo rescue nil%></td>
        </tr>
        <tr>
          <td width="40%" class="campos">Nombre</td>
          <td><%= text_field :indicadoresvariable, :nombre, { :class => "campo", :size => 60,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
              <%= error_message_on :indicadoresvariable, :nombre, :css_class =>"cerror"%></td>
        </tr>
        <tr class="odd1">
          <td class="campos">Descripción</td>
          <td><%=text_area(:indicadoresvariable, :descripcion, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :descripcion, :css_class =>"cerror"%></td>
        </tr>
        <tr>
          <td class="campos">Unidad de medida</td>
          <td><%=text_area(:indicadoresvariable, :unidad, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :unidad, :css_class =>"cerror"%></td>
        </tr>
        <tr class="odd1">
          <td class="campos">Fuente</td>
          <td><%=text_area(:indicadoresvariable, :fuente, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :fuente, :css_class =>"cerror"%></td>
        </tr>
        <tr>
          <td class="campos">Tipo de fuente</td>
          <td><%=text_area(:indicadoresvariable, :tipofuente, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :tipofuente, :css_class =>"cerror"%></td>
        </tr>
        <tr class="odd1">
          <td class="campos">Formato de los datos o registros</td>
          <td><%=text_area(:indicadoresvariable, :formatoreg, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :formatoreg, :css_class =>"cerror"%></td>
          </tr>
        <tr>
          <td class="campos">Medio de verificación</td>
          <td><%=text_area(:indicadoresvariable, :medioverif, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :medioverif, :css_class =>"cerror"%></td>

        </tr>
        <tr class="odd1">
          <td class="campos">Instrumento de recolección de los datos</td>
          <td><%=text_area(:indicadoresvariable, :instrumento, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :instrumento, :css_class =>"cerror"%></td>
        </tr>
        <tr>
          <td class="campos">Periodicidad de recolección de los datos</td>
          <td><%=text_area(:indicadoresvariable, :periodicidad, :cols => 90, :rows => 3,
                           :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'") %>
              <%= error_message_on :indicadoresvariable, :periodicidad, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
         <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td  height="30">
            <div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<%end%>