<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/archivomin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">ARCHIVOS SERIES</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	            { :border=>0, :title => "Buscar"}),archivosseries_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<% form_for(@archivosserie) do |f| %>
<div align="center">
<table width="800" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
        <tr>
          <td width="15%" align="left" class="campos">Codigo Seccion </td>
          <td width="85%" class="campos"><%= f.text_field :codigo_seccion,{ :class => "campo", :size => 10,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :codigo_seccion, :css_class =>"cerror"%>
          &nbsp;Seccion&nbsp;&nbsp;
          <%= f.text_field :seccion,{ :class => "campo", :size => 70,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :seccion, :css_class =>"cerror"%></td>
        </tr>
        <tr>
          <td align="left" class="campos">Codigo Serie</td>
          <td class="campos"><%= f.text_field :codigo_serie,{ :class => "campo", :size => 10,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :codigo_serie, :css_class =>"cerror"%>
          &nbsp;Serie&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= f.text_field :serie,{ :class => "campo", :size => 70,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :serie, :css_class =>"cerror"%>
          </td>
        </tr>
        <tr>
          <td align="left" class="campos">Codigo Subserie</td>
          <td class="campos"><%= f.text_field :codigo_subserie,{ :class => "campo", :size => 10,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :codigo_subserie, :css_class =>"cerror"%>
          &nbsp;Subserie&nbsp;
          <%= f.text_field :subserie,{ :class => "campo", :size => 70,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :subserie, :css_class =>"cerror"%>
          </td>
          </tr>
        <tr>
          <td align="left" class="campos">Codigo Final</td>
          <td class="campos"><%= f.text_field :codigo_final,{ :class => "campo", :size => 10,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :archivosserie, :codigo_final, :css_class =>"cerror"%></td>
          </tr>
      </table>
      <% if permiso("archivosserie","A").to_s == "S" %>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div></td>
        </tr>
      </table>
      <% end %>
    </td>
</tr>
</table>
</div>
<%end%>
<% unless @archivosserie.new_record? %>
   <div id="archivosseriesdocs_form">
      <%= render :partial => "/archivosseriesdocs/archivosseriesdocs" %>
   </div>
<% end %>