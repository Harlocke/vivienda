<% form_tag buscar_iguanas_path, :method => 'get' do %>
<div align="center">
<table width="75%" border="0" cellpadding="0" cellspacing="0">
  <tr class="odd1">
      <td width="30%" height="20" class="campos"><div align="left">Proyecto</div></td>
      <td width="70%" class="camposDesc"><div align="left">
        <%= select("ubicacion","proyecto",select_iguanaproyectos, { :include_blank => true },
                      { :style=>"width:350px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        </div></td>
    </tr>
    <tr>
      <td width="30%" height="20" class="campos"><div align="left">Tipo de Proyecto</div></td>
      <td width="70%" class="camposDesc"><div align="left">
        <%= select("ubicacion","tipo",select_clase, { :include_blank => true },
                      { :style=>"width:143px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        </div></td>
    </tr>
    <tr class="odd1">
      <td height="20" class="campos"><div align="left">Identificaci√≥n</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :identificacion, params[:identificacion],{ :class => "campo", :size => 20,
                                                   :onChange=> "javascript:this.value=this.value.toUpperCase();",:onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
    <tr>
      <td height="20" class="campos"><div align="left">Nro de Plano</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :nro_registro, params[:nro_registro],{ :class => "campo", :size => 20,
                                                  :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
    <tr class="odd1">
      <td height="20" class="campos"><div align="left">Encuesta</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :encuesta, params[:encuesta],{ :class => "campo", :size => 20,
                                                          :onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
    <tr >
      <td height="20" class="campos"><div align="left">Cobama</div></td>
      <td class="camposDesc"><div align="left"><%= text_field_tag :cobama, params[:cobama],{ :class => "campo", :size => 20,
                                                          :onFocus => "this.style.border='1px solid #f00'",:onBlur => "this.style.border='1px solid #bbb'" } %></div>
      </td>
    </tr>
</table>
<table width="80%" height="0" border="0" align="center" cellpadding="0" cellspacing="0">
   <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
</table>
<table width="80%" border="0" cellpadding="2" align="center" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
    <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %>
          </span></div>
      <div class="uiButton"><img class="img" src="/images/excel.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'format', :value => 'xls' %>
          </span></div>
      <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= link_to 'Notas', {:controller => "iguanasestados", :action => "index"} %>
          </span></div>
</div></td>
  </tr>
</table>
</div>
<% end %>

