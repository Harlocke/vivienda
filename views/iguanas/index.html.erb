        <tr class="odd1">
          <td width="30%" height="20" class="campos"><div align="left">Proyecto</div></td>
          <td width="70%" class="camposDesc"><div align="left">
            <%= select("ubicacion",:proyecto,select_iguanaproyectos, { :include_blank => true },
                          { :style=>"width:350px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
            </div></td>
        </tr>
        <tr>
          <td height="20" class="campos"><div align="left">Tipo de Proyecto</div></td>
