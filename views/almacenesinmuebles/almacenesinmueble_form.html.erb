<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/inmueblesmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">INVENTARIOS DE INMUEBLES</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	            { :border=>0, :title => "Buscar"}),busqueda_almacenesinmuebles_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<% form_for(@almacenesinmueble) do |f| %>
<div align="center">
<table width="70%" border="0" cellspacing="2" cellpadding="0">
    <tr>
          <td width="33%" height="20" class="campos" align="left">Nro de Matricula</td>
          <td class="camposDesc" align="left"><%= f.text_field :matricula,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Descripcion Inmueble</td>
          <td class="camposDesc" align="left"><%= f.text_field :descripcion,{ :class => "campo", :size => 80,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Dirección Certificado de Tradicion</td>
          <td class="camposDesc" align="left"><%= f.text_field :direccion_certificado,{ :class => "campo", :size => 80,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Dirección Catastro</td>
          <td class="camposDesc" align="left"><%= f.text_field :direccion_catastro,{ :class => "campo", :size => 80,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>

    <tr>
          <td width="33%" height="20" class="campos" align="left">Ubicación</td>
          <td class="camposDesc" align="left"><%= f.text_field :lugar,{ :class => "campo", :size => 80,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Estado</td>
          <td class="camposDesc" align="left"><%= f.select(:estado, {"POR DEFINIR" => "POR DEFINIR",
                           "ISVIMED" => "ISVIMED",
                           "PARA SANEAR" => "PARA SANEAR",
                           "SANEADO" => "SANEADO",
                           "SANEAR - CORVIDE" => "SANEAR - CORVIDE"},
                        { :include_blank => true },
                      { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Valor del Avaluo</td>
          <td class="camposDesc" align="left"><%= f.text_field :avaluo,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <% unless @almacenesinmueble.new_record? %>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Fecha Creacion</td>
          <td class="camposDesc" align="left"><%= @almacenesinmueble.created_at.strftime("%Y-%m-%d %X")%></td>
        </tr>
        <tr>
          <td width="33%" height="20" class="campos" align="left">Fecha Ultima Actualizacion</td>
          <td class="camposDesc" align="left"><%= @almacenesinmueble.updated_at.strftime("%Y-%m-%d %X")%></td>
        </tr>
        <% end %>
      </table>
<br/>
    <table width="70%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
</table>
<% if permiso("almacenesinmueble","A").to_s == "S" %>
<table width="70%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
  </tr>
</table>
<% end %>
  </div>
<% end %>
