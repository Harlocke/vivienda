<table width="80%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td align="left" class="campos">Usuario Titular</td>
    <td align="left" class="campos"></td>
  </tr>
  <tr valign="top">
    <td><%=select("titulacionesuser", "user_id", User.find(:all, :order => 'nombre').collect {|p| [ p.nombre, p.id ] }, { :include_blank => true },
      { :style=>"width:450px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
    <%= error_message_on :titulacionesuser, :user_id, :css_class =>"cerror"%></td>
    <td ><div align="center">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :titulacionesuser, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
      </div></td>
</tr>
</table>
    