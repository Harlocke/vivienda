 <div align="center">
    <% if @indicador.clase_indicador.to_s == 'COMPUESTO' or @indicador.clase_indicador.to_s == 'ESPECIFICO' %>
        <table width="100%" border="0" cellpadding="0" cellspacing="2">
          <tr>
           <td width="10%" height="30" class="oce-first">Mes-A침o</td>
           <td width="20%" height="30" class="oce-first"><%=@indicador.numerador%></td>
           <td width="20%" height="30" class="oce-first"><%=@indicador.denominador%></td>
           <td width="50%" height="30" class="oce-first">An치lisis</td>
          </tr>
          <tr valign="top">
           <td class="camposDesc"><%=descmes(@indicadoresficha.mes)%> - <%=@indicadoresficha.anno%></td>
           <td><%= text_field :indicadoresficha, :valor_numerador, { :class => "campo", :size =>10,
