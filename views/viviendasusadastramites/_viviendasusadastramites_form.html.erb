<table width="95%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td width="64%" height="20" align="left" class="campos">Tipo de Tramite *</td>
    <td width="12%" align="left" class="campos">Solicitud *</td>
    <td width="12%" align="left" class="campos">Recibido</td>
    <td width="12%" align="left" class="campos">Notificado</td>
  </tr>
  <tr>
    <td align="left" class="camposDesc"><%=select("viviendasusadastramite", "tipostramite_id", Tipostramite.find(:all, :order=>"descripcion").collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
{ :style=>"width:550px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
    <%= error_message_on :viviendasusadastramite, :tipostramite_id, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc"><%= calendar_date_select "viviendasusadastramite", "fecha_solicitud", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
    <%= error_message_on :viviendasusadastramite, :fecha_solicitud, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc"><%= calendar_date_select "viviendasusadastramite", "fecha_recibido", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
    <%= error_message_on :viviendasusadastramite, :fecha_recibido, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc"><%= calendar_date_select "viviendasusadastramite", "fecha_notificado", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
    <%= error_message_on :viviendasusadastramite, :fecha_notificado, :css_class =>"cerror"%></td>
  </tr>
</table>
<table width="95%" height="0" border="0" cellpadding="0" cellspacing="0">
<tr>
  <td height="10"><hr size="1" noshade class="hrlinea"/></td>
</tr>
</table>
<table width="95%" border="0" cellpadding="2" cellspacing="2">
<tr>
<td  height="30"><div align="right">
  <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :viviendasusadastramite, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
</div></td>
</tr>
</table>
