<%=  javascript_include_tag :defaults %>
<table width="100%" height="40">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td width="3%"><img src="/images/viviendasusadamin.png" width="64" height="64"/></td>
          <td width="94%"><div class="col_enc">&nbsp;&nbsp;INFORMACION VIVIENDA USADA</div></td>
          <td width="3%"><div align="right"><%= link_to image_tag('atras.png',{ :border=>0, :title => "Listado de Predios"}),viviendasusadas_path %></div></td>
        </tr>
      </table>
    </td>
  </tr>
</table><br/>
<table width="85%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="5%" height="30" class="oce-first"><div align="center">ID</div></td>
    <td width="20%" class="oce-first"><div align="center">Sector</div></td>
    <td width="20%" class="oce-first"><div align="center">Barrio</div></td>
    <td width="20%" class="oce-first"><div align="center">Proyecto</div></td>
    <td width="20%" class="oce-first"><div align="center">Estado</div></td>
    <td width="15%" class="oce-first">&nbsp;</td>
  </tr>
<% @viviendasusadas.each do |viviendasusada| %>
  <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
    <td height="25" class="camposDesc"><div align="center"><%=h viviendasusada.id %></div></td>
    <td class="camposDesc"><div align="center"><%=h viviendasusada.tipospoblacion.descripcion rescue nil%></div></td>
    <td class="camposDesc"><div align="center"><%=h viviendasusada.sector %></div></td>
    <td class="camposDesc"><div align="center"><%=h viviendasusada.proyecto %></div></td>
    <td class="camposDesc"><div align="center"><%=h viviendasusada.viviendasusadasestado.descripcion rescue nil %></div></td>
    <td class="camposDesc"><div align="center">
      <%= link_to 'Editar', edit_viviendasusada_path(:id=>viviendasusada, :etapa=>'1'), :class=>"editarlink"%>
      <% if permiso("viviendasusada","E").to_s == "S" %>
          &nbsp;|&nbsp;<%= link_to 'Borrar', viviendasusada_path(viviendasusada),:confirm => 'Esta Seguro de Eliminar?',:method => :delete, :class=>"borrarlink"%>
      <% end %>
      </div></td>
  </tr>
<% end %>
</table>
<br/>
<table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="100%" height="20" class="camposDescN"><div align="center"><%= will_paginate @viviendasusadas, :previous_label => 'Anterior', :next_label => 'Siguiente' %></div></td>
   </tr>
  <tr valign="middle">
    <td width="100%" height="20" class="camposDescN"><div align="center">Total Registros consulta: <%= @viviendasusadas.total_entries %> - Nro Total de Registro : <%=@viviendasusadas.count%></div></td>
  </tr>
</table>
<br/>