<% if @correspondenciasinternasf.count != 0 %>
  <table width="100%" border="0" cellpadding="2" align="center" cellspacing="2">
    <tr><td height="30" align="left"><div class="col_enc">RADICADOS (<%=@correspondenciasinternasf.count.to_i rescue 0%>)</div></td></tr>
  </table>
  <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr valign="middle">
        <td width="10%" height="25" class="oce-first"><div align="center">Consecutivo</div></td>
        <td width="15%" class="oce-first"><div align="center">Fecha Documento</div></td>
        <td width="50%" class="oce-first"><div align="justify">Asunto</div></td>
        <td width="20%" class="oce-first"><div align="center">Requiere respuesta</div></td>
        <td width="5%" class="oce-first">&nbsp;</td>
      </tr>
    <% @correspondenciasinternasf.each do |correspondenciasinterna| %>
      <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
        <td height="10" class="camposDesc"><div align="center"><%=h correspondenciasinterna.consecutivo rescue nil%></div></td>
        <td class="camposDesc"><div align="center"><%=h correspondenciasinterna.fecha_documento rescue nil%></div></td>
        <td class="camposDesc"><div align="justify"><%=h correspondenciasinterna.asunto rescue nil%></div></td>
        <td class="camposDesc"><div align="center"><%=h correspondenciasinterna.respuesta rescue nil%></div></td>
        <td class="camposDesc"><div align="center"><%= link_to 'Editar', edit_correspondenciasinterna_path(correspondenciasinterna),:class=>"editarlink"%></div></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <table width="100%" border="0" cellpadding="2" align="center" cellspacing="2">
    <tr><td height="30" align="left"><div class="col_enc">RADICADOS</div></td></tr>
  </table>
  <table width="40%" border="0" cellpadding="0" align="center" cellspacing="0" bgcolor="#E5E5E5">
    <tr>
      <td width="10%"><div align="right"><img src="/images/alerta.png"></div></td>
      <td width="90%" class="campos">&nbsp;&nbsp;Usted no tiene memorandos radicados</td>
    </tr>
  </table>
<% end %>
<br/>