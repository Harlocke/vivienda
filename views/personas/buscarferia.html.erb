<%=  javascript_include_tag :defaults %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/personasmin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">RESULTADOS CONSULTA</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	                            { :border=>0, :title => "Buscar"}),personas_path %></div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<table width="60%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="20%" height="30" class="oce-first"><div align="center">Identificacion</div></td>
    <td width="80%" class="oce-first">Nombre</td>
  </tr>
  <% @personas.each do |persona| %>
  <tr valign="middle">
    <td height="30"><div align="center" class="camposDesc"><strong><%=h persona.identificacion %></strong></div></td>
    <td class="camposDesc">
      <table width="100%" border="0">
        <tr>
          <td><strong><%=h persona.nombres rescue nil%></strong></td>
        </tr>
        <% persona.beneviviendas.each do |benevivienda| %>
        <tr>
          <td class="camposDesc"><%=h benevivienda.identificacion %> - <%=h benevivienda.nombres rescue nil%></td>
        </tr>
        <% end %>        
    </table></td>    
  </tr>
  <% end %>
</table>
<div align="center" class="campos">Nro Total de Registro : <%=@personas.count rescue nil%></div>
<br/>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="0" id="one-column-emphasis">
  <tr class="odd1">
    <td width="50%" height="30" class="camposNotas camposDesc13"><div align="left"><br/><strong><%=@error rescue nil%></strong></div><br/></td>
  </tr>
</table>
