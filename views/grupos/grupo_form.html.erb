                <%= link_to image_tag('atras.png',
	                            { :border=>0, :title => "Buscar"}),grupos_path %>
              </td>
            </tr>
          </table></td>
      </tr>
</table>
<div id="container">
    <div id="mainmenu">
      <ul id="tabs">
        <li><a href="#tab1"><img src="/images/users.png" border="0" title="Grupos"/></a></li>
