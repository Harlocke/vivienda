        <li><a href="#tab2"><img src="/images/modulos.png" border="0" title="Actividades"/></a></li>
  <% end %>
      </ul>
    </div>
      <div class="panel" id="tab1">
        <fieldset>
<% form_for(@grupo) do |f| %>
  <div align="center">
<table width="100%" border="0" cellpadding="2" cellspacing="2"  align="center">
  <tr><td></td></tr>
  <tr>
    <td height="30"><div class="col_enc">GRUPOS</div></td>
  </tr>
</table>
  <table width="760" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td>
 <table width="100%" border="0" cellspacing="2" cellpadding="0">
    <tr>
    <th width="25%" height="20"><div align="left" class="campos">Id :</div></th>
    <td width="75%"><div align="left" class="camposDesc"><%= @grupo.id%></div></td>
  </tr>
  <tr>
    <th height="20" class="campos"><div align="left">Codigo Grupos : *</div></th>
    <td ><div align="left" class="camposDesc"><%= f.text_field :codigogrupo ,{ :class => "campo", :size => 10,
                :onChange=> "javascript:this.value=this.value.toUpperCase();"}%>
          <%= f.error_message_on :codigogrupo, :css_class =>"cerror"%></div></td>
  </tr>
  <tr>
    <th height="20" class="campos"><div align="left">Descripcion Grupo: *</div></th>
    <td ><div align="left" class="camposDesc"><%= text_area(:grupo, :grupo, :cols => 100, :rows => 4, :class => 'campo',
                            :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
          <%= f.error_message_on :grupo, :css_class =>"cerror"%></div></td>
  </tr>
  <tr>
    <th height="20" class="campos"><div align="left">Codigo Subgrupo : *</div></th>
    <td ><div align="left" class="camposDesc"><%= f.text_field :codigosubgrupo ,{ :class => "campo", :size => 10,
                :onChange=> "javascript:this.value=this.value.toUpperCase();"}%>
          <%= f.error_message_on :codigosubgrupo, :css_class =>"cerror"%></div></td>
  </tr>
  <tr>
    <th height="20" class="campos"><div align="left">Descripcion Subgrupo: *</div></th>
    <td ><div align="left" class="camposDesc"><%= text_area(:grupo, :subgrupo, :cols => 100, :rows => 4, :class => 'campo',
                            :onChange=> "javascript:this.value=this.value.toUpperCase();") %>
          <%= f.error_message_on :subgrupo, :css_class =>"cerror"%></div></td>
  </tr>
</table>
  <table width="100%" height="0" border="0" cellpadding="0" align="center" cellspacing="0">
        <tr>
          <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
  <table width="100%" border="0" cellpadding="2" align="center" cellspacing="2">
    <tr>
      <td  height="30"><div align="right">
          <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= f.submit "Guardar" %></span></div>
  </div></td>
    </tr>
  </table>
      </td>
    </tr>
  </table>
  </div>
<% end %>
</fieldset>
</div>
