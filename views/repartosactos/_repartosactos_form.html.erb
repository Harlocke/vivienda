<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
        <tr>
          <td width="85%" align="left" class="campos">Acto *</td>
          <td width="15%" align="left" class="campos">Valor *</td>
        </tr>
        <tr>
          <td align="left" class="camposDesc"><%=select("repartosacto", "tiposacto_id", Tiposacto.find(:all, :order =>['descripcion ASC']).collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:720px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
          <%= error_message_on :repartosacto, :tiposacto_id, :css_class =>"cerror"%></td>
          <td align="left" class="camposDesc"><%= text_field :repartosacto, :valor,{ :class => "campo", :size => "15",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
          <%= error_message_on :repartosacto, :valor, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td  height="30"><div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :repartosacto, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
      </div></td>
        </tr>
      </table>
    </td>
  </tr>
</table>


