<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/pendiente.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;INFORMACION IMAGENES TAREA</div></td>
              <td width="3%"><div align="right"><div class="uiButton"><img class="img" src="/images/1atras.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= link_to 'Regresar',  edit_pendiente_path(@pendientesnota.pendiente_id) %></span></div></div>            </td>
            </tr>
          </table></td>
      </tr>
</table>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="72%" height="30" class="oce-first">Tarea</td>
    <td width="14%" height="30" class="oce-first">Fecha Asignación</td>
    <td width="14%" height="30" class="oce-first">Fecha Vencimiento</td>
  </tr>
   <tr>
     <td height="72" class="camposDesc"><%=@pendientesnota.pendiente.tarea  %></td>
     <td height="14" class="camposDesc"><%=@pendientesnota.pendiente.fecha_asignacion  %></td>
     <td height="14" class="camposDesc"><%=@pendientesnota.pendiente.fecha_vence %></td>
  </tr>
</table>
<table width="80%" border="0" align="center" cellpadding="0" cellspacing="0">
   <tr valign="middle">
     <td width="72%" height="30" class="oce-first">Observacion</td>
     <td width="14%" height="30" class="oce-first">Fecha Solución</td>
     <td width="14%" height="30" class="oce-first">Estado</td>     
   </tr>
   <tr>
     <td height="72" class="camposDesc"><%=@pendientesnota.observacion  %></td>
     <td height="14" class="camposDesc"><%=@pendientesnota.pendiente.fecha_solucion  %></td>
     <td height="14" class="camposDesc"><%=@pendientesnota.pendiente.estado %></td>
  </tr>
</table>

   <br/>
<table width="80%" height="40" align="center" >
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="94%"><div class="col_enc">&nbsp;&nbsp;IMAGENES</div></td>
              <td width="3%"><div align="right">
                  
                   <div class="uiButton"><img class="img" src="/images/1nuevo.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= link_to "Nuevo", new_img_pendientesimagen_path %></span></div>
                 </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<table width="80%" border="0" align="center" cellspacing="1" cellpadding="1">
  <tr>
    <td class="oce-first" width="10%">Fecha</td>
    <td class="oce-first" width="35%">Descripcion</td>
    <td class="oce-first" width="40%">Nombre Archivo</td>
    <td class="oce-first" width="15%">&nbsp;</td>
  </tr>
</table>
<% @pendientesimagenes.each do |pendientesimagen| %>
<table width="80%" border="0" cellspacing="0" cellpadding="0" align="center" >
  <tr class="<%=cycle('even1', 'odd1')%>">
    <td width="10%" class="camposDesc"><%=pendientesimagen.created_at%></td>
    <td width="35%" class="camposDesc"><%=pendientesimagen.descripcion %></td>
    <td width="40%" class="camposDesc"><%=pendientesimagen.pendiente_file_name %></td>
    <td width="15%" class="camposDesc"><div align="center">
         <%= link_to "Ver", pendientesimagen.pendiente.url(:original, false),
             { :popup => ['new_window','height=450,width=600,scrollbars=yes'], :class=>"verlink"}%>
      <% if permiso("pendientesimagen","E").to_s == "S" %>
       <%= link_to 'Borrar', img_pendientesimagen_path(@pendientesnota, pendientesimagen),
                :confirm => 'Esta Seguro de Eliminar?', :method => :delete, :class=>"borrarlink"%>
      <% end %>
</div></td>
  </tr>
</table>
<% end %>
<br />
