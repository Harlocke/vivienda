<br/>
<table width="80%" border="0" cellpadding="2" cellspacing="2"  align="center">
  <tr><td></td></tr>
  <tr>
    <td align="left" height="30"><div class="col_enc">INFORME IMPRESORAS</div></td>
  </tr>
</table>
<% form_tag informe_impresorasconsumos_path, :method => 'get' do %>
   <div align="center">
    <table width="70%" border="0" cellspacing="2" cellpadding="0">
        <tr class="odd1">
          <td width="25%" height="20" class="campos" align="left">Año</td>
          <td width="25%" height="20" class="campos" align="left">Mes</td>
          <td width="50%" height="20" class="campos" align="left">Impresora</td>
        </tr>
        <tr >
         <td class="camposDesc" align="left">
            <%= select("ubicacion",
                :anno, [ ["2016" , "2016"],["2017" , "2017"],["2018" , "2018"],["2019", "2019"],["2020", "2020"]],
                       {:prompt => "– SELECCIONE EL AÑO –"},
                      { :style=>"width:170px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
         </td>
         <td class="camposDesc" align="left">
          <%= select( "ubicacion",:mes, [ ["ENERO" , '01'],["FEBRERO", '02'], ["MARZO", '03'], ["ABRIL" , '04'],
                  ["MAYO" ,'05'],["JUNIO" , '06'],["JULIO", '07'],["AGOSTO",'08'],
                  ["SEPTIEMBRE" , '09'],["OCTUBRE" , '10'],["NOVIEMBRE" , '11'],["DICIEMBRE",'12']],
                {:prompt => "– SELECCIONE EL MES –"},
                { :style=>"width:170px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
          </td>
          <td class="camposDesc" align="left">
            <%=select("ubicacion", "dependencia_id", select_dependencia.collect {|p| [ p.descripcion.to_s, p.id ] },{:prompt => "– SELECCIONE LA DEPENDENCIA –", :include_blank => false },
              { :style=>"width:330px",:class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
            <%= error_message_on :impresorasconsumo, :dependencia_id, :css_class =>"cerror"%> </td>
          </td>
      </tr>
    </table>
    <table width="70%" height="0" align="center" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="70%" border="0" cellpadding="2" align="center" cellspacing="2">
      <tr>
        <td  height="100%"><div align="right">
          <div class="uiButton"><img class="img" src="/images/excel.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Generar Informe" %></span></div>
          </div></td>
      </tr>
    </table>
<% end %>














