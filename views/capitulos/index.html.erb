<table width="100%" height="40">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td width="3%"><img src="/images/correspondenciaremitentemin.png" width="64" height="64"/></td>
          <td width="94%"><div class="col_enc">ACTIVIDADES</div></td>
          <td width="3%"><div align="right">
          </div></td>
        </tr>
      </table></td>
  </tr>
</table>
<br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="30%" height="30" class="oce-first">Capitulo</td>
    <td width="30%" height="30" class="oce-first">SubCapitulo</td>
    <td width="30%" height="30" class="oce-first">Actividad</td>
    <td width="10%" class="oce-first">&nbsp;</td>
  </tr>
<% @capitulos.each do |capitulo| %>
  <tr class="<%=cycle('even1', 'odd1')%>">
    <td class="camposDesc"><%=h capitulo.desccapitulo %></td>
    <td class="camposDesc"><%=h capitulo.descsubcapitulo %></td>
    <td class="camposDesc"><%=h capitulo.descactividad rescue nil %></td>
    <td class="camposDesc" ><%= link_to 'Editar', edit_capitulo_path(capitulo), :class=>"editarlink"%></td>
  </tr>
<% end %>
</table>
<br/>
<table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
   <tr>
     <td width="100%" class="camposDesc"><div align="center">Total Registros: <%= @capitulos.count %></div></td>
   </tr>
</table>
