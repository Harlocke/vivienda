<table width="100%" border="0" cellspacing="2" cellpadding="0">
  <tr valign="top">
    <td  width="40%" class="camposDesc">
<%=select("titulacionessueno", "potdato_id", Potdato.find(:all,:conditions=>["clase='SUELO' and id not in (select potdato_id from titulacionessuenos where titulacion_id = #{@titulacion.id})"] ).collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
    { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
        <%= error_message_on :titulacionessueno, :sueno, :css_class =>"cerror"%></td>
    <td  width="60%" class="camposDesc"><div align="left">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :titulacionessueno, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
        </div></td>
  </tr>
</table>