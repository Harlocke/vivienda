<table width="100%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td width="60%" align="left" class="campos">Tipo *</td>
    <td width="40%" align="left" class="campos">Grado de afectaci√≥n *</td>
  </tr>
  <tr valign="top">
    <td class="camposDesc" align="left" >
    <%=select("titulacionesriesgo", "potdato_id", Potdato.find(:all,:conditions=>["clase='RIESGO' and id not in (select potdato_id from titulacionesriesgos where titulacion_id = #{@titulacion.id})"] ).collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
    { :style=>"width:380px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
        <%= error_message_on :titulacionesriesgo, :potdato_id, :css_class =>"cerror"%></td>
    <td class="camposDesc" align="left" >
      <%= select(:titulacionesriesgo,
                :tipo, [["TOTALMENTE AFECTADO","TOTALMENTE AFECTADO"],
                        ["PARCIALMENTE AFECTADO","PARCIALMENTE AFECTADO"]],
                        { :include_blank => true },
                      { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        <%= error_message_on :titulacionesriesgo, :tipo, :css_class =>"cerror"%></td>
    </tr>
</table>
