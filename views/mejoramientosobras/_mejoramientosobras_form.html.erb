<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="20%" class="campos" align="left">Identificacion *</td>
        <td width="60%" class="campos" align="left">Nombre *</td>
        <td width="20%" class="campos" align="left">Salario *</td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left"><%= text_field :mejoramientosobra, :identificacion,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :mejoramientosobra, :identificacion, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :mejoramientosobra, :nombre,{ :class => "campo", :size => 90,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :mejoramientosobra, :nombre, :css_class =>"cerror"%></td>
        <td class="camposDesc" align="left"><%= text_field :mejoramientosobra, :salario,{ :class => "campo", :size => 20,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :mejoramientosobra, :salario, :css_class =>"cerror"%></td>
        </tr>
    </table>
    <table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="80%" class="campos" align="left">Cargo *</td>
        <td width="20%" class="campos" align="left">Contrato Activo?*</td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left"><%= text_field :mejoramientosobra, :cargo,{ :class => "campo", :size => 80,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
        <%= error_message_on :mejoramientosobra, :cargo, :css_class =>"cerror"%></td>
        <td><%= select(:mejoramientosobra,
                :contrato_activo, { "SI" => "SI",
                           "NO" => "NO"},
                        { :include_blank => true },
                      { :style=>"width:100px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
          <%= error_message_on :mejoramientosobra, :contrato_activo, :css_class =>"cerror"%></td>
      </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr><td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :mejoramientosobra, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td></tr>
    </table>
    </td>
  </tr>
</table>
