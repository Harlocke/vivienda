<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/usersdatomin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">CONSULTA USUARIOS SIFI</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	                            { :border=>0, :title => "Buscar"}),usersdatos_path %></div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<% form_for(@usersdato, :html => { :multipart => true }) do |f| %>
<div align="center">
<table width="650" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td width="290" valign="top"><table width="100%" height="40" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td width="100%"><h2 class="uiHeaderTitle"><%= image_tag @usersdato.userfoto.url, :size => "200x200"  %></h2></td>
      </tr>
    </table></td>
    <td width="21">&nbsp;</td>
    <td width="600"><table width="100%"  border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="34%" class="campos">Nombre </td>
        <td width="66%"><%=@usersdato.user.nombre rescue nil%></td>
      </tr>
      <tr>
        <td width="34%" class="campos">Dependencia </td>
        <td width="66%"><%=@usersdato.user.dependencia.descripcion rescue nil%></td>
      </tr>
      <tr>
        <td width="34%" class="campos">E-mail</td>
        <td width="66%"><%=@usersdato.user.email rescue nil%></td>
      </tr>
      <tr>
        <td class="campos">Telefono</td>
        <td><%= f.text_field :telefono,{ :class => "campo", :size => 30,
              :onChange=> "javascript:this.value=this.value.toUpperCase();",
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" }%></td>
      </tr>
      <tr>
        <td class="campos">Extension</td>
        <td><%= f.text_field :extension,{ :class => "campo", :size => 30,
              :onChange=> "javascript:this.value=this.value.toUpperCase();",
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" }%></td>
      </tr>
      <tr>
        <td class="campos">Imagen</td>
        <td><%= f.file_field :userfoto, { :class => "campo",
                         :size => 46,
                         :maxlength => 60,
                         :onFocus => "this.style.border='1px solid #f00'",
                         :onBlur => "this.style.border='1px solid #bbb'" } %></td>
      </tr>
      <tr>
        <td class="campos">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </table></td>
  </tr>
  <tr>
    <td colspan="3" valign="top"><table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr>
        <td  height="30"><div align="right">
            <div class="uiButton"><img class="img" src="/images/guardar.png">&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
        </div></td>
      </tr>
    </table></td>
  </tr>
</table>
</div>
<% end %>