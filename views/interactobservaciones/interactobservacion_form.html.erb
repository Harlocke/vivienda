<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40">
    <tr>
      <td>
        <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td width="3%"><img src="/images/informemin.png" width="64" height="64"/></td>
            <td width="94%"><div class="col_enc">INTERVENTORIA - <%=@interactobservacion.interactividad.interventoria.contrato.empleado.autobuscar rescue nil%></div></td>
            <td width="3%"><div align="right">
                <% if @interactobservacion.interactividad.interventoria.mes.to_s == '12' and @interactobservacion.interactividad.interventoria.estado.to_s == 'REVISIONFINALGH' %>
                     <%= link_to image_tag('atras.png',
                  { :border=>0, :title => "Buscar"}), {:controller=>"interventorias", :action=>"revisionfinal", :id=>@interactobservacion.interactividad.interventoria_id} %>
                <% else %>
                   <%= link_to image_tag('atras.png',
                  { :border=>0, :title => "Buscar"}), {:controller=>"interventorias", :action=>"revisioninter", :id=>@interactobservacion.interactividad.interventoria_id} %>
                <% end %>
              </div></td>
          </tr>
        </table></td>
    </tr>
</table>
<% form_for(@interactobservacion) do |f| %>
<%= f.hidden_field :interactividad_id %>
<div align="center">
  <table width="820" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr class="odd1">
            <td width="20%" height="25" class="campos"><strong>Actividad Nro.</strong></td>
            <td width="80%" class="camposDesc"><%=@interactobservacion.interactividad.consecutivo rescue 0%></td>
          </tr>
          <tr>
            <td width="20%" height="25" class="campos"><strong>Contrato número:</strong></td>
            <td width="80%" class="camposDesc"><%=@interactobservacion.interactividad.interventoria.contrato.nro_contrato%> de <%=@interactobservacion.interactividad.interventoria.contrato.fecha_firma.strftime("%d") rescue nil%> de <%=descmesmin(@interactobservacion.interactividad.interventoria.contrato.fecha_firma.strftime("%m")) rescue nil%> de <%=@interactobservacion.interactividad.interventoria.contrato.fecha_firma.strftime("%Y") rescue nil%></td>
          </tr>
          <tr class="odd1">
            <td height="25" class="campos"><strong>Periodo</strong></td>
            <td class="camposDesc">Mes: <%=descmes(@interactobservacion.interactividad.interventoria.mes) rescue nil%> - Año <%=@interactobservacion.interactividad.interventoria.anno rescue nil%> </td>
          </tr>
          <tr>
            <td height="25" class="campos"><strong>Actividad</strong></td>
            <td class="camposDesc"><div align="justify"><%=@interactobservacion.interactividad.actividad rescue nil%></div></td>
          </tr>
          <tr class="odd1">
            <td height="25" class="campos"><strong>Desarrollo</strong></td>
            <td class="camposDesc"><div align="justify"><%=@interactobservacion.interactividad.desarrollo%></div></td>
          </tr>
          <tr>
            <td height="25" class="campos"><strong>Soporte digital</strong></td>
            <td class="camposDesc"><div align="left"><%= render 'anexos' %></div></td>
          </tr>
          <tr class="odd1">
            <td height="25" class="campos"><strong>Observacion Interventor</strong></td>
            <td class="camposDesc"><div align="left"><%= text_area(:interactobservacion, :observaciones, :cols => 100, :rows => 15, :class => 'campo', :maxlength => 3999,
                  :onChange=> "javascript:this.value=this.value.toUpperCase();") %></div></td>
          </tr>
        </table>
        <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
          <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
        </table>
        <table width="100%" border="0" cellpadding="2" cellspacing="2">
          <tr>
            <td height="30" class="camposNotas"><div align="justify"><strong>Fecha Ult. Actualización: <%=@interactobservacion.interactividad.updated_at.strftime("%Y-%m-%d %X") rescue nil%></strong></div></td>
            <td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>
<% end %>
<br/>
