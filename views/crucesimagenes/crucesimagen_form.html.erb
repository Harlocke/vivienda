<%= stylesheet_link_tag 'tabs'%>
<%= javascript_include_tag 'fabtabulous' %>
<table width="100%" height="40"  align="center">
  <tr>
    <td>
      <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0"  align="center">
        <tr>
          <td width="3%"><img src="/images/crucesminambientemin.png" width="64" height="64"/></td>
          <td width="97%"><div class="col_enc">&nbsp;&nbsp;CRUCES SOLICITUDES - DOCUMENTOS</div></td>
        </tr>
      </table></td>
  </tr>
</table>
<br/>
<fieldset>
  <% form_for(@crucesimagen, :html => { :multipart => true }) do |f| %>
  <div align="center">
      <table width="100%" border="0" cellpadding="2" cellspacing="2"  align="center">
        <tr><td></td></tr>
        <tr>
          <td height="30"><div class="col_enc">DOCUMENTO ZR</div></td>
        </tr>
      </table><br/>
      <table width="80%" align="center">
        <tr>
          <td class="campos" width="180" height="0">Seleccione el documento y pulse guardar</td>
          <td width="350"><%= f.file_field :cruce,
                  { :class => "campo",
                    :size => 46,
                    :maxlength => 1000,
                    :onFocus => "this.style.border='1px solid #f00'",
                    :onBlur => "this.style.border='1px solid #bbb'" } %>
                      <%= error_message_on :crucesimagen, :cruce, :css_class =>"cerror"%>
                    </td>
        </tr>
      </table>
  <table width="90%" height="0" border="0" cellpadding="0" align="center" cellspacing="0">
    <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
  </table>
<table width="80%" border="0" cellpadding="2" cellspacing="2">
  <tr>
    <td  height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
        <div class="uiButton"><img class="img" src="/images/cancel.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= link_to 'Regresar', cruces_path %></span></div>
     </div></td>
  </tr>
</table>
    </div>
  <% end %>
</fieldset>
<br/><br/><br/>