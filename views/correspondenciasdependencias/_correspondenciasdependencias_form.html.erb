        <td><%=  text_field :correspondenciasdependencia, :nro_oficio ,{ :class => "campo", :size => 30,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" }%>
          <%= error_message_on :correspondenciasdependencia, :nro_oficio, :css_class =>"cerror"%>
          </td>
        </tr>
      </table>
