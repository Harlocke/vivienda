<table width="90%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="50%"><span class="campos">Dependencia *</span></td>
        <td width="25%"><span class="campos">Nro Oficio</span></td>
      </tr>
      <tr>
        <td><%=select("correspondenciasdependencia", "dependencia_id", Dependencia.find(:all, :conditions=>["id not in (10010,10004,10041,10040,10043)"], :order=>'descripcion').collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true },
      { :style=>"width:400px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
