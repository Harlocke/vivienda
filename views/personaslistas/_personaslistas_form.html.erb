<table width="837" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="80%" class="campos" align="left">Proceso - Documento</td>
        <td width="10%" class="campos" align="left"><div align="center">Estado</div></td>
        <td width="10%" class="campos" align="left"><div align="center">Folios</div></td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left"><div align="justify"><strong><%=@personaslista.listasverificacion.proceso rescue nil%></strong><br/>
                 <%=@personaslista.listasverificacion.codigo rescue nil%> - <%=@personaslista.listasverificacion.documento rescue nil%></div></td>
        <td class="camposDesc" align="left"><div align="center"><%=select(:personaslista,
                :estado, [["SI","SI"],["NO","NO"],["N/A","N/A"]],
                        { :include_blank => true },
                      { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%></div></td>
        <td class="camposDesc" align="left"><div align="center">
        <%= text_field :personaslista, :folios,{ :class => "campo", :size => 5,
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'"}%>
        <%= error_message_on :personaslista, :folios, :css_class =>"cerror"%></div></td>
        </tr>
    </table>
      <table width="100%" border="0" cellspacing="2" cellpadding="0">
      <tr class="odd1">
        <td width="100%" class="campos" align="left">Observaciones</td>
      </tr>
      <tr valign="top">
        <td class="camposDesc" align="left">
          <%=text_area(:personaslista, :observacion, :cols => 100, :rows => 3, :class => 'campo', :maxlength => 3900,
:onChange=> "javascript:this.value=this.value.toUpperCase();") %>
        </td>
      </tr>
    </table>
    <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="100%" border="0" cellpadding="2" cellspacing="2">
      <tr><td height="30"><div align="right"><div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :personaslista, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div></td></tr>
    </table>
    </td>
  </tr>
</table>
