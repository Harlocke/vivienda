<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="3%"><img src="/images/correspondenciaremitentemin.png" width="64" height="64"/></td>
              <td width="94%"><div class="col_enc">TIPOS DE MEJORAMIENTOS</div></td>
              <td width="3%"><div align="right"><%= link_to image_tag('atras.png',
	            { :border=>0, :title => "Buscar"}),mejoramientostipos_path %>
                </div></td>
            </tr>
          </table></td>
      </tr>
</table>
<div align="center">
  <% form_for(@mejoramientostipo) do |f| %>
    <table width="60%" border="0" cellspacing="2" cellpadding="0">
      <tr>
        <td width="30%" height="20" class="campos" align="left">Descripcion </td>
        <td width="70%" class="camposDesc" align="left"><%= f.text_field :descripcion,{ :class => "campo", :size => 50,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
              :onFocus => "this.style.border='1px solid #f00'",
              :onBlur => "this.style.border='1px solid #bbb'" } %>
        <%= error_message_on :mejoramientostipo, :descripcion, :css_class =>"cerror"%></td>
      </tr>
      <tr>
        <td width="30%" height="20" class="campos" align="left">Clase </td>
        <td width="70%" class="camposDesc" align="left"><%= select(:mejoramientostipo,:clase, { "MEJORAMIENTO" => "MEJORAMIENTO","IMAGEN" => "IMAGEN"},
                        { :include_blank => true },
                      { :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
        <%= error_message_on :mejoramientostipo, :clase, :css_class =>"cerror"%></td>
      </tr>
    </table>
    <table width="60%" height="0" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td height="10"><hr size="1" noshade class="hrlinea"/></td>
      </tr>
    </table>
    <table width="60%" border="0" cellpadding="2" cellspacing="2">
      <tr>
        <td  height="30"><div align="right">
            <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
           </div></td>
      </tr>
    </table>
  <% end %>
</div>
<br/>

