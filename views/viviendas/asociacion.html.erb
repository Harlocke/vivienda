  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><div align="right"><strong>Proyecto :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" height="30" class="camposDesc"><%= chain_select_stand_alone(:proyecto, :prefix => 'ubicacion', :value => 0) %></td>
  </tr>
  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><div align="right"><strong>Bloque :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" height="30" class="camposDesc"><%= chain_select_stand_alone(:bloque, :prefix => 'ubicacion', :parent =>2 ) %></td>
  </tr>
  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><div align="right"><strong>Piso :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" height="30" class="camposDesc"><%= chain_select_stand_alone(:piso, :prefix => 'ubicacion', :parent =>3 ) %></td>
  </tr>
  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><div align="right"><strong>Apartamento :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" height="30" class="camposDesc"><%= chain_select_stand_alone(:apto, :prefix => 'ubicacion', :parent =>4 ) %></td>
  </tr>
  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><div align="right"><strong>Local :&nbsp;&nbsp;</strong></div></td>
    <td width="60%" height="30" class="camposDesc"><%= chain_select_stand_alone(:local, :prefix => 'ubicacion', :parent =>5) %></td>
  </tr>
  <tr valign="middle">
    <td width="40%" height="30" class="camposDesc"><%= chain_select_indicator_stand_alone('ubicacion')%></td>
    <td width="60%" height="30" class="camposDesc">
  <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
      <%= submit_tag "Buscar", :name => 'nil', :disable_with => "Buscando..." %>
          </span></div></td>
  </tr>
</table>
<% end %>