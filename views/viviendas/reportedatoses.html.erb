<%=  javascript_include_tag :defaults %>
<table width="100%" height="40">
      <tr>
        <td>
          <table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="100%"><div class="col_enc">DATOS DEPORTE</div></td>
            </tr>
          </table></td>
      </tr>
</table>
<br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="10%" height="20" class="camposDescN">Proyecto :</td>
    <td width="80%" height="20" class="camposDesc"><%=@buscaproyecto%></td>
  </tr>
  <tr valign="middle">
    <td width="10%" height="20" class="camposDescN">Nivel :</td>
    <td width="80%" height="20" class="camposDesc"><%=@buscaproceso%></td>
  </tr>
</table>
<br/>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr valign="middle">
    <td width="10%" height="30" class="oce-first">Bloque</td>
    <td width="10%" height="30" class="oce-first">Apto</td>
    <td width="10%" height="30" class="oce-first">Estado</td>
    <td width="60%" height="30" class="oce-first">Jefe de Hogar</td>
    <td width="10%" height="30" class="oce-first"></td>
  </tr>
</table>
<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0" id="one-column-emphasis">
<% @viviendas.each do |vivienda| %>
  <tr valign="middle">
    <td width="10%" height="30" class="camposDesc"><%=h vivienda.bloque.descripcion rescue nil%></td>
    <td width="10%" height="30" class="camposDesc"><%=h vivienda.apto.descripcion rescue nil%></td>
    <td width="10%" height="30" class="camposDesc"><%=h vivienda.estadovivienda %></td>
    <td width="70%" height="30" class="camposDesc">
      <% vivienda.viviendaspersonas.each do |viviendaspersona| %>
      <table width="100%" border="0" cellspacing="0" cellpadding="0" id="">
        <tr>
          <td width="20%" class="camposDesc"><%=h viviendaspersona.persona.identificacion %></td>
          <td width="60%" class="camposDesc"><%=h viviendaspersona.persona.primer_nombre %> <%=h viviendaspersona.persona.segundo_nombre %> <%=h viviendaspersona.persona.primer_apellido %> <%=h viviendaspersona.persona.segundo_apellido %></td>
          <td width="20%" class="camposDesc"><%= link_to image_tag('person.png',{ :border=>0, :title => "Actualizar"}), edit_persona_path(viviendaspersona.persona.id) %>
          <%= link_to image_tag('house.png',{ :border=>0, :title => "Actualizar"}), edit_vivienda_path(viviendaspersona.vivienda_id)%></td>
        </tr>
      </table>
      <% end %>
   </td>
   <td width="10%" height="30" class="camposDesc"></td>
  </tr>
<% end %>
</table>


