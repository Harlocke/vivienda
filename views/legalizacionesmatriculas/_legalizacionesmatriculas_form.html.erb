
<div align="center">
<table width="70%" border="0" cellspacing="0" cellpadding="0">
  <tr class="odd1">
    <td width="55%" class="campos">Proyecto - Bloque *</td>
    <td width="20%" class="campos">Nro Matricula *</td>
    <td width="25%" class="campos">RPH *</td>
  </tr>
  <tr>
     <td><%=select("legalizacionesmatricula", "legalizacionesproyecto_id", @legalizacion.legalizacionesproyectos.find(:all,:order => 'id').collect {|p| [ p.completo.to_s, p.id ] }, { :include_blank => true },
      { :style=>"width:300px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
         <strong><%= error_message_on :legalizacionesmatricula, :legalizacionesproyecto_id, :css_class =>"cerror"%></strong></td>
     <td><%= text_field :legalizacionesmatricula, :matricula,{ :class => "campo", :size => 15,
                :onChange=> "javascript:this.value=this.value.toUpperCase();",
                :onFocus => "this.style.border='1px solid #f00'",
                :onBlur => "this.style.border='1px solid #bbb'" } %>
         <strong><%= error_message_on :legalizacionesmatricula, :matricula, :css_class =>"cerror"%></strong></td>
     <td><%=select("legalizacionesmatricula", "legalizacionesreglamento_id", @legalizacion.legalizacionesreglamentos.find(:all,:order => 'id').collect {|p| [ p.rph.to_s, p.id ] }, { :include_blank => true },
      { :style=>"width:200px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" }) %>
         <strong><%= error_message_on :legalizacionesmatricula, :legalizacionesreglamento_id, :css_class =>"cerror"%></strong></td>
  </tr>
</table>
<table width="95%" border="0" cellspacing="0" cellpadding="0">
  <tr><td height="10"><hr size="1" noshade class="hrlinea"/></td></tr>
</table>
<table width="95%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="30"><div align="right">
        <div class="uiButton"><img class="img" src="/images/guardar.png"/>
          <span class="uiButtonText"><%= hidden_field :legalizacionesmatricula, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div></div>
    </td>
  </tr>
</table>
</div>