<table width="95%" border="0" cellspacing="2" cellpadding="0">
  <tr class="odd1">
    <td width="14%" align="left" class="campos">Fecha *</td>
    <td width="22%" align="left" class="campos">Tipo de Pago *</td>
    <td width="50%" align="left" class="campos">Descripci&oacute;n *</td>
    <td width="14%" align="left" class="campos">Valor *</td>
  </tr>
  <tr>
    <td align="left" class="camposDesc"><%= calendar_date_select "viviendasusadaspago", "fecha_pago", :year_range => select_rangocalendar, :class=> "campo", :size => 10, :time => false, :onfocus=>"this.blur()"%>
    <%= error_message_on :viviendasusadaspago, :fecha_pago, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc">
    <%= select(:viviendasusadaspago, :tipo_pago, { "PAGO ISVIMED" => "PAGO ISVIMED","PAGO IDEA" => "PAGO IDEA","PAGO ESCRITURAS" => "PAGO ESCRITURAS"},
                  { :include_blank => true },{ :style=>"width:150px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
    <%= error_message_on :viviendasusadaspago, :tipo_pago, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc"><%= text_field :viviendasusadaspago, :descripcion,{ :class => "campo", :size => 60,
          :onChange=> "javascript:this.value=this.value.toUpperCase();",
          :onFocus => "this.style.border='1px solid #f00'",
          :onBlur => "this.style.border='1px solid #bbb'" }  %>
    <%= error_message_on :viviendasusadaspago, :descripcion, :css_class =>"cerror"%></td>
    <td align="left" class="camposDesc"><%= text_field :viviendasusadaspago, :valor,{ :class => "campo", :size => 20,
          :onChange=> "javascript:this.value=this.value.toUpperCase();",
          :onFocus => "this.style.border='1px solid #f00'",
          :onBlur => "this.style.border='1px solid #bbb'" }  %>
    <%= error_message_on :viviendasusadaspago, :valor, :css_class =>"cerror"%></td>
  </tr>
</table>
<table width="95%" height="0" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td height="10"><hr size="1" noshade class="hrlinea"/></td>
  </tr>
</table>
<table width="95%" border="0" cellpadding="2" cellspacing="2">
  <tr>
  <td  height="30"><div align="right">
    <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :viviendasusadastramite, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
  </div></td>
  </tr>
</table>
