<table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td width="3%"><img src="/images/fiduciamin.png" width="64" height="64"/></td>
    <td width="92%"><div class="col_enc">&nbsp;&nbsp;INFORMACION DE FIDUCIAS</div></td>
    <td width="5%">
      <div align="right"> 
          <%= link_to image_tag('database_add.png',{ :border=>0, :title => "Nuevo registro Fiducia"}),new_fiducia_path %>
    </div></td>
  </tr>
</table>
<br/>
<div align="center">
  <% form_tag request.path, :method => 'get' do %>
    <% content_tag :label do %>
      <table width="70%" border="0" cellpadding="0" cellspacing="0">
        <tr class="odd1">
          <td height="20" class="campos"><div align="left">Nro Fondo</div></td>
          <td class="camposDesc"><div align="left"><%= text_field_tag :nro_fondo, params[:nro_fondo],{ :class => "campo", :size => 20,
                      :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr>
          <td height="20" class="campos"><div align="left">Nro Contrato</div></td>
          <td class="camposDesc"><div align="left"><%= text_field_tag :nro_contrato, params[:nro_contrato],{ :class => "campo", :size => 20,
                      :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></td>
        </tr>
        <tr class="odd1">
          <td height="20" class="campos"><div align="left">Nombre Entidad</div></td>
          <td class="camposDesc"><div align="left"><%= text_field_tag :nombre, params[:nombre],{ :class => "campo", :size => 40,
                                                      :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" } %></div>
          </td>
        </tr>
        <tr >
          <td height="20" class="campos" colspan="2"><hr size="1" noshade class="hrlinea"/></td>
        </tr>        
        <tr >
          <td height="20" class="campos"><div align="left"></div></td>
          <td class="camposDesc"><div align="left">
            <div class="uiButton"><img class="img" src="/images/search.png"/>&nbsp;&nbsp;<span class="uiButtonText">
              <%= submit_tag "Buscar", :name => 'nil', :value => 'Buscar', :disable_with => "Buscando..." %></span></div>       
          </div>
          </td>
        </tr>
      </table>
    <% end %>
  <% end %>
</div>
<br/>
<% if @fiducias.count.to_i > 0 %>
    <table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr valign="middle">
        <td width="40%" height="30" class="oce-first"><div align="left">Nombre Fiducia</div></td>
        <td width="40%" class="oce-first"><div align="left">NIT</div></td>
        <td width="15%" class="oce-first"><div align="left">Estado</div></td>
        <td width="5%" class="oce-first">&nbsp;</td>
      </tr>
    <% @fiducias.each do |fiducia| %>
      <tr valign="middle" class="<%=cycle('even1', 'odd1')%>">
        <td height="20" class="camposDesc"><div align="left"><%=h fiducia.nombre rescue nil%></div></td>
        <td class="camposDesc"><%= fiducia.nit rescue nil %></td>
        <td class="camposDesc"><%= fiducia.estado rescue nil %></td>
        <td class="camposDesc"><div align="center"><%= link_to 'Ver', edit_fiducia_path(:id=>fiducia.id, :etapa=>"1"),:class=>"editarlink"%></div></td>
      </tr>
    <% end %>
    </table>
    <br/>
    <table width="90%" border="0" cellpadding="0" cellspacing="0">
      <tr><td width="100%" class="camposDesc"><div align="center"><%= will_paginate @fiducias, :previous_label => 'Anterior', :next_label => 'Siguiente' %></div></td></tr>
      <tr><td width="100%" class="camposDesc"><div align="center"><strong>Total Registros:</strong> <%= @fiducias.total_entries %></div></td></tr>
    </table>
    <br/>
<% end %>
