<table width="837"  border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="25%" class="campos">Cantidad convocatorias</td>
          <td width="25%" class="campos">Tema</td>
          <td width="15%" class="campos">Fecha</td>
          <td width="15%" class="campos">Asistió</td>
          <td width="20%" class="campos">Cantidad asistentes</td>
        </tr>
        <tr>
          <td><%= text_field :ayudastaller, :cnt_convocatoria, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudastaller, :cnt_convocatoria, :css_class =>"cerror"%></td>
          <td><%= text_field :ayudastaller, :tema, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudastaller, :tema, :css_class =>"cerror"%></td>          
          <td><%= calendar_date_select "ayudastaller", "fecha", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudastaller, :fecha, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :asistio, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :asistio, :css_class =>"cerror"%></td>
          <td><%= text_field :ayudastaller, :cnt_asistente, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudastaller, :cnt_asistente, :css_class =>"cerror"%></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="20%" class="campos">Fecha de la jornada</td>
          <td width="20%" class="campos">Convocado a la jornada</td>
          <td width="20%" class="campos">Asistio a la jornada</td>
          <td width="20%" class="campos">Convocado a la escuela de padres</td>
          
        </tr>
        <tr>
          <td><%= calendar_date_select "ayudastaller", "fecha_jornada", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudastaller, :fecha_jornada, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :convocado_jornada, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :convocado_jornada, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :asistio_jornada, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :asistio_jornada, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :convocado_escuela, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :convocado_escuela, :css_class =>"cerror"%></td>          
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          <td width="20%" class="campos">Asistió a la escuela de padres</td>
          <td width="20%" class="campos">Grupo escuela de padres</td>
          <td width="20%" class="campos">Graduado escuela de padres</td>
          <td width="20%" class="campos">Asistio Copropiedad</td>
        </tr>
        <tr>
          <td><%= select(:ayudastaller, :cf_2008, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :cf_2008, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :asistio_escuela, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :asistio_escuela, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :grupo_escuela, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :grupo_escuela, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :graduado_escuela, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :graduado_escuela, :css_class =>"cerror"%></td>
          
        </tr>
      </table>

      <table width="100%" border="0" cellpadding="0" cellspacing="2">
        <tr class="odd1">
          
          <td width="25%" class="campos">Cnt convocatorias Copropiedad</td>
          <td width="25%" class="campos">Fecha Copropiedad</td>
          <td width="25%" class="campos">Asistio taller visita al proyecto</td>
          <td width="25%" class="campos">Fecha taller visita al proyecto</td>
        </tr>
        <tr> 
          <td><%= text_field :ayudastaller, :cf_2006, { :class => "campo", :size => 25,
                      :onChange=> "javascript:this.value=this.value.toUpperCase();",
                      :onFocus => "this.style.border='1px solid #f00'",
                      :onBlur => "this.style.border='1px solid #bbb'" }%>
            <%= error_message_on :ayudastaller, :cf_2006, :css_class =>"cerror"%></td>
          <td><%= calendar_date_select "ayudastaller", "cf_2007", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudastaller, :cf_2007, :css_class =>"cerror"%></td>
          <td><%= select(:ayudastaller, :visita_proyecto, select_sino,{ :include_blank => true },
                        { :style=>"width:50px", :class => "campo", :onFocus => "this.style.border='1px solid #f00'", :onBlur => "this.style.border='1px solid #bbb'" })%>
              <%= error_message_on :ayudastaller, :visita_proyecto, :css_class =>"cerror"%></td>
          <td><%= calendar_date_select "ayudastaller", "visita_fecha", :year_range => select_rangocalendar, :class=> "campo", :placeholder=>"AAAA-MM-DD", :size => 10, :time => false%>
              <%= error_message_on :ayudastaller, :visita_fecha, :css_class =>"cerror"%></td>
          
        </tr>
      </table>
      <table width="100%" height="0" border="0" cellpadding="0" cellspacing="0">
        <tr>
         <td height="10"><hr size="1" noshade class="hrlinea"/></td>
        </tr>
      </table>
      <table width="100%" border="0" cellpadding="2" cellspacing="2">
        <tr>
          <td  height="30">
            <div align="right">
              <div class="uiButton"><img class="img" src="/images/guardar.png"/>&nbsp;&nbsp;<span class="uiButtonText"><%= hidden_field :ayudastaller, :id %><%= submit_tag "Guardar", :disable_with => "Guardando..."%></span></div>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>